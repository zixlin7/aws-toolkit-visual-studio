<commonui:BaseAWSControl x:Class="Amazon.AWSToolkit.Lambda.View.AddEventSourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"                         
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="150" Width="400"       
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Margin="15,5,5,5" 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Style="{DynamicResource awsTextBlockBaseStyle}" 
                   >Source Type:</TextBlock>

        <ComboBox Style="{DynamicResource awsComboBoxStyle}"
                  Grid.Row="0"
                  Grid.Column="1"
                  Margin="5"
                  SelectedIndex="0"
                  Name="_ctlSourceType"
                  SelectionChanged="EventSourceType_SelectionChanged"
                  >
            <ComboBoxItem>Amazon S3</ComboBoxItem>
            <ComboBoxItem>Amazon DynamoDB Stream</ComboBoxItem>
            <ComboBoxItem>Amazon SNS</ComboBoxItem>
            <ComboBoxItem>Amazon Kinesis</ComboBoxItem>
        </ComboBox>

        <TextBlock Margin="15,5,5,5" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Style="{DynamicResource awsTextBlockBaseStyle}" 
                   Name="_ctlResourceLabel"
                   >Resource:</TextBlock>

        <ComboBox Style="{DynamicResource awsComboBoxStyle}"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="5"
                  SelectedIndex="0"
                  Name="_ctlResources"
                  >
        </ComboBox>


        <TextBlock Margin="15,5,5,5" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Style="{DynamicResource awsTextBlockBaseStyle}" 
                   ToolTip="The largest number of records that AWS Lambda will give to your function in a single event. The default is 100 records."
                   >Batch Size:</TextBlock>

        <TextBox Margin="5,5,5,5" 
                     Grid.Row="2" 
                     Grid.Column="1" 
                     Name="_ctlBatchSize"
                     Text="100"
                     HorizontalAlignment="Left"
                     Width="50"
                     IsEnabled="False"
                     ToolTip="The largest number of records that AWS Lambda will give to your function in a single event. The default is 100 records."
                     Style="{DynamicResource awsTextBoxStyle}"/>


        <TextBlock Margin="15,5,5,5" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   VerticalAlignment="Center" 
                   Style="{DynamicResource awsTextBlockBaseStyle}" 
                   ToolTip="The position in the stream where AWS Lambda should start reading."
                   >Starting Position:</TextBlock>

        <ComboBox Margin="5,5,5,5" 
                     Grid.Row="3" 
                     Grid.Column="1" 
                     Name="_ctlStartingPosition"
                     SelectedIndex="0"
                     HorizontalAlignment="Left"
                     IsEnabled="False"
                     ToolTip="The position in the stream where AWS Lambda should start reading."
                     Style="{DynamicResource awsComboBoxStyle}">
            <ComboBoxItem>TRIM_HORIZON</ComboBoxItem>
            <ComboBoxItem>LATEST</ComboBoxItem>
        </ComboBox>
    </Grid>
</commonui:BaseAWSControl>
