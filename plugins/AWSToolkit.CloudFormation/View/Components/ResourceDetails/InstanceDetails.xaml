<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.CloudFormation.View.Components.ResourceDetails.InstanceDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"             
    Height="auto" Width="auto">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,5,5,0" Text="Instance ID" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <WrapPanel Grid.Row="0" Grid.Column="1" Margin="5,5,5,0">
            <Image Width="16" Height="16" Source="{Binding InstanceIcon, Mode=OneWay}"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeInstance.InstanceId,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>
        </WrapPanel>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,5,5,0" Text="Type" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,5,0"  Text="{Binding NativeInstance.InstanceType,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5,5,0" Text="Architecture" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeInstance.Architecture,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="5,5,5,0" Text="AMI ID" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeInstance.ImageId,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="5,5,5,0" Text="Key Name" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeInstance.KeyName,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>


        <TextBlock Grid.Row="0" Grid.Column="2" Margin="5,5,5,0" Text="IP Address" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="0" Grid.Column="3" Margin="5,5,5,0" Text="{Binding NativeInstance.IpAddress,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="1" Grid.Column="2" Margin="5,5,5,0" Text="Public DNS Name" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="3" Margin="5,5,5,0" Text="{Binding NativeInstance.PublicDnsName,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="2" Grid.Column="2" Margin="5,5,5,0" Text="Private IP Address" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="3" Margin="5,5,5,0" Text="{Binding NativeInstance.PrivateIpAddress,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="3" Grid.Column="2" Margin="5,5,5,0" Text="Private DNS Name" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="3" Margin="5,5,5,0" Text="{Binding NativeInstance.PrivateDnsName,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>



        <commonui:ToolkitDataGridWrapper AutoGenerateColumns="False" Name="_ctlEC2DataGrid" Margin="10,10,10,10"
                Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"                          
                CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="True"
                RowHeaderWidth="0"
                ItemsSource="{Binding NativeInstance.Tag}"                          
                CellStyle="{DynamicResource awsDataGridCellCentering}"  
                HorizontalAlignment="Left" HeadersVisibility="All">
            <commonui:ToolkitDataGridWrapper.Columns>                

                <DataGridTextColumn Header="Tag Name"  Binding="{Binding Key, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Tag Value" Binding="{Binding Value, Mode=OneWay}" Width="auto"/>

            </commonui:ToolkitDataGridWrapper.Columns>
        </commonui:ToolkitDataGridWrapper>

    </Grid>
</commonui:BaseAWSUserControl>
