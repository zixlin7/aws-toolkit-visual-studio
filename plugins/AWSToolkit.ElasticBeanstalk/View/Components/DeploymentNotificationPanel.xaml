<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.ElasticBeanstalk.View.Components.DeploymentNotificationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.Resources>
            <Style x:Key="emulatedLinkStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="Cursor" Value="Hand" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="Red" />
                        <Setter Property="TextDecorations" Value="Underline" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="False">
                        <Setter Property="Foreground" Value="Blue" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="_message" 
                   Grid.Row="0" 
                   TextWrapping="Wrap" 
                   TextTrimming="WordEllipsis"
                   Panel.ZIndex="2"
                   Margin="0"
                   Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBlock Style="{StaticResource emulatedLinkStyle}" 
                   x:Name="_link" 
                   Grid.Row="1" 
                   Margin="0,4,0,0" 
                   MouseLeftButtonUp="_link_MouseLeftButtonUp"
                   Panel.ZIndex="2"
                   >
            Click to view...
        </TextBlock>
        <Image Grid.Row="0" 
               Grid.RowSpan="2"
               Grid.Column="1"
               HorizontalAlignment="Right" 
               VerticalAlignment="Top"
               Width="24"
               Height="24"
               x:Name="_successImage"
               Panel.ZIndex="1"
               Margin="4,0,0,0"
               Visibility="Hidden"
               DataContext="{DynamicResource CommonIcons}" 
               Source="{Binding Complete24x24Icon}"
               />
        <Image Grid.Row="0" 
               Grid.RowSpan="2"
               Grid.Column="1"
               HorizontalAlignment="Right" 
               VerticalAlignment="Top"
               Width="24"
               Height="24"
               x:Name="_failImage"
               Panel.ZIndex="0"
               Margin="4,0,0,0"
               Visibility="Hidden"
               DataContext="{DynamicResource CommonIcons}" 
               Source="{Binding WarningIcon}"
               />
    </Grid>
</commonui:BaseAWSUserControl>