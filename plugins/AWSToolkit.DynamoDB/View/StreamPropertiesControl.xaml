<commonui:BaseAWSControl x:Class="Amazon.AWSToolkit.DynamoDB.View.StreamPropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"                           
             mc:Ignorable="d" 
             Height="150" Width="550">

    <commonui:BaseAWSControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/DefaultTheme.xaml"/>
    </commonui:BaseAWSControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <CheckBox IsChecked="{Binding EnableStream}" 
                  Name="_ctlEnabled"
                  Margin="5" Grid.Row="0" 
                  Grid.Column="0" Grid.ColumnSpan="2"
                  Style="{DynamicResource awsCheckboxButtonBaseStyle}"
                  Checked="_ctlEnabled_Checked"
                  >
            Enable DynamoDB Stream for Capturing Table Activity
        </CheckBox>

        <TextBlock Margin="5" VerticalAlignment="Center" 
                   Grid.Row="1" Grid.Column="0" 
                   Style="{DynamicResource awsTextBlockBaseStyle}">
            Stream View Type:
        </TextBlock>

        <ComboBox Grid.Row="1" Grid.Column="1" 
                IsEnabled="{Binding ElementName=_ctlEnabled, Path=IsChecked}"
                Style="{DynamicResource awsComboBoxStyle}"
                Margin="2,0,4,0"
                Name="_ctlViewType"
                ItemsSource="{Binding AllViewTypes}"
                SelectedItem="{Binding SelectedViewType}"
                DisplayMemberPath="Description"
                />


        <Separator Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="4"/>

        <TextBlock Margin="5" VerticalAlignment="Center" 
                   Grid.Row="3" Grid.Column="0" 
                   Style="{DynamicResource awsTextBlockBaseStyle}">
            Stream ARN:
        </TextBlock>
        <TextBox 
                Grid.Column="0" Grid.Row="4" 
                Grid.ColumnSpan="2"
                Margin="4" 
                Text="{Binding StreamARN, Mode=OneWay}" 
                Style="{DynamicResource awsSelectableTextBoxStyle}"></TextBox>

    </Grid>
</commonui:BaseAWSControl>
