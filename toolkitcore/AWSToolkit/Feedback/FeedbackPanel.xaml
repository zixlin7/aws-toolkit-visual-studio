<commonUi:BaseAWSControl x:Class="Amazon.AWSToolkit.Feedback.FeedbackPanel"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:commonUi="clr-namespace:Amazon.AWSToolkit.CommonUI"
                         xmlns:converters="clr-namespace:Amazon.AWSToolkit.CommonUI.Converters"
                         xmlns:images="clr-namespace:Amazon.AWSToolkit.CommonUI.Images"
                         xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes"
                         xmlns:urls="clr-namespace:Amazon.AWSToolkit.Urls;assembly=AWSToolkit"
                         themes:ToolkitThemes.UseToolkitTheme="True"
                         mc:Ignorable="d"
                         Height="400" Width="500">
    <commonUi:BaseAWSControl.Resources>
        <ResourceDictionary>
            <converters:NullableInverseBooleanConverter x:Key="NullableInverseBooleanConverter" />
            <commonUi:VsImages x:Key="VsImages" />
        </ResourceDictionary>

    </commonUi:BaseAWSControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Margin="6 6 6 6" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Bottom"
                       TextWrapping="NoWrap"
                       Text="Looking for help? Search our"/>
            <commonUi:HyperlinkText Grid.Column="1"
                                    Margin="3 0 0 0"
                                    OpenUrlCommand="{Binding ViewUserGuideCommand}"
                                    LinkText="Documentation"/>


        </Grid>

        <TextBlock
            Margin="6 9 6 0"
            Grid.Row="1"
            FontWeight="SemiBold"
            Text="Join us on GitHub" />

        <StackPanel Grid.Row="2" 
                    Margin="6"
                    Orientation="Vertical">
        
            <commonUi:HyperlinkText
                OpenUrlCommand="{Binding ViewUrlCommand}"
                LinkText="Report a bug"
                Url="{x:Static urls:GitHubUrls.BugReportUrl}"
                Margin="0 0 0 3" />
          
            <commonUi:HyperlinkText
                Margin="0 3 0 3"
                OpenUrlCommand="{Binding ViewUrlCommand}"
                LinkText="Request a feature"
                Url="{x:Static urls:GitHubUrls.FeatureRequestUrl}" />

        </StackPanel>

        <TextBlock
            Margin="6 9 6 6"
            Grid.Row="3"
            FontWeight="SemiBold"
            Text="Share feedback" />

        <StackPanel
            Name="FeedbackSentiment" x:FieldModifier="private"
            Grid.Row="4"
            Margin="6"
            Orientation="Horizontal"
            HorizontalAlignment="Left">
            <RadioButton Name="PositiveButton" x:FieldModifier="private"
                         VerticalContentAlignment="Center"
                         IsChecked="{Binding FeedbackSentiment,UpdateSourceTrigger=PropertyChanged}">
                <images:VsImage
                    Width="32"
                    Height="32"
                    VerticalAlignment="Top"
                    Margin="0 0 9 0"
                    Source="{Binding Source={StaticResource VsImages}, Path=FeedbackSmile32}" />
            </RadioButton>
            <RadioButton Name="NegativeButton" x:FieldModifier="private"
                         VerticalContentAlignment="Center"
                         IsChecked="{Binding FeedbackSentiment, Converter={StaticResource NullableInverseBooleanConverter}, UpdateSourceTrigger=PropertyChanged}">
                <images:VsImage
                    Width="32"
                    Height="32"
                    VerticalAlignment="Top"
                    Margin="0 0 9 0"
                    Source="{Binding Source={StaticResource VsImages}, Path=FeedbackFrown32}" />
            </RadioButton>
        </StackPanel>

        <TextBlock
            Margin="6 9 6 6"
            Grid.Row="5"
            FontWeight="SemiBold"
            Text="How can we improve the AWS Toolkit?" />

        <TextBlock
            Margin="6 0 6 6"
            Grid.Row="6"
            TextWrapping="WrapWithOverflow"
            Text="Don’t add personally identifiable information (PII), confidential or sensitive information in your feedback. Please remove any PII when sharing file paths, error messages, etc." />

        <commonUi:HintTextBox
            x:Name="FeedbackComment" x:FieldModifier="private"
            Margin="6"
            Grid.Row="7"
            VerticalAlignment="Stretch"
            HintText="[Optional]"
            AcceptsReturn="True"
            Text="{Binding FeedbackComment, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

        <TextBlock
            Margin="6"
            Grid.Row="8"
            VerticalAlignment="Stretch"
            Text="{Binding RemainingCharacters, StringFormat={}{0} characters remaining}" />
    </Grid>
</commonUi:BaseAWSControl>
