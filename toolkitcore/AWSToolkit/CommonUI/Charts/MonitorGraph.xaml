<UserControl x:Class="Amazon.AWSToolkit.CommonUI.Charts.MonitorGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes"
             mc:Ignorable="d" 
             themes:ToolkitThemes.UseToolkitTheme="True"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock 
                Grid.Row="0" Grid.Column="0" 
                Margin="0 6 0 0"
                HorizontalAlignment="Center"
                FontWeight="Bold"
                Text="{Binding Title}" />

            <lvc:CartesianChart
                Grid.Row="1" Grid.Column="0"
                Margin="6">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries
                        Values="{Binding Values}"
                        Title="{Binding Title}"
                        StrokeThickness="3" 
                        Stroke="#FF9900" 
                        Fill="Transparent" 
                        LineSmoothness="0" 
                        PointGeometrySize="7"
                        />
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis LabelFormatter="{Binding LabelFormatter}" FontSize="8">
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0" Step="{Binding Steps}">
                                <lvc:Separator.Stroke>
                                    <SolidColorBrush Color="#888888" />
                                </lvc:Separator.Stroke>
                            </lvc:Separator>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis>
                        <lvc:Axis.Separator>
                            <lvc:Separator StrokeThickness="0.3">
                                <lvc:Separator.Stroke>
                                    <SolidColorBrush Color="#888888" />
                                </lvc:Separator.Stroke>
                            </lvc:Separator>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Grid>
    </Border>
</UserControl>
