<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.CommonUI.ImageButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI"                      
    >

    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
    </UserControl.Resources>

    <Button Name="_ctlUploadBtn">
        <Button.Content>
            <WrapPanel>
                <Image Width="16" Height="16" Name="_ctlExecuteIcon" Source="{Binding ExecuteIcon}"/>
                <TextBlock Name="_ctlLabel" Text="{Binding Text}" Style="{DynamicResource awsTextBlockBaseStyle}"></TextBlock>
            </WrapPanel>
        </Button.Content>
    </Button>
</commonui:BaseAWSUserControl>
