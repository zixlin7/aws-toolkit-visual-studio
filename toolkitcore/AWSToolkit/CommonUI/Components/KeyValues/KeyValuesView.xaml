<UserControl x:Class="Amazon.AWSToolkit.CommonUI.Components.KeyValues.KeyValuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:Amazon.AWSToolkit.Models"
             xmlns:keyValues="clr-namespace:Amazon.AWSToolkit.CommonUI.Components.KeyValues"
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes"
             themes:ToolkitThemes.UseToolkitTheme="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=keyValues:DesignSampleKeyValuesViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type models:KeyValue}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Keys" Width="Auto" MinWidth="75" />
                        <ColumnDefinition SharedSizeGroup="Spacer" Width="6" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        Grid.Column="0"
                        Margin="0 0 0 6"
                        Text="{Binding Key, ValidatesOnNotifyDataErrors=False}"
                        />
                    <TextBlock 
                        Grid.Column="2"
                        Margin="0 0 0 6"
                        Text="{Binding Value}"
                        />
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Headings -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition SharedSizeGroup="Keys" MinWidth="75" />
                <ColumnDefinition SharedSizeGroup="Spacer" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0" Grid.Column="0"
                FontWeight="Bold"
                Text="Key"
                />

            <TextBlock
                Grid.Row="0" Grid.Column="2"
                FontWeight="Bold"
                Text="Value"
                />
        </Grid>

        <!-- Key Values List -->
        <ScrollViewer
            Grid.Row="1"
            Margin="0 6 0 0"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalContentAlignment="Stretch"
            >
            <ItemsControl ItemsSource="{Binding KeyValues}" />
        </ScrollViewer>
    </Grid>
</UserControl>
