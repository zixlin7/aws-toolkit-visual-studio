<UserControl x:Class="Amazon.AWSToolkit.CommonUI.DateTimeRangePicker.TimeInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes"
             xmlns:commonUi="clr-namespace:Amazon.AWSToolkit.CommonUI"
             themes:ToolkitThemes.UseToolkitTheme="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source=".\..\ValidationErrorTemplate.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <commonUi:HintTextBox 
            MinWidth="70"
            VerticalContentAlignment="Center"
            VerticalAlignment="Top"
            LostFocus="OnLostFocus"
            HintText="{Binding Format}"
            Text="{Binding TimeInput, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
    </Grid>
</UserControl>
