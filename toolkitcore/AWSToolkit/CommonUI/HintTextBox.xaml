<UserControl x:Class="Amazon.AWSToolkit.CommonUI.HintTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes"
             xmlns:converters="clr-namespace:Amazon.AWSToolkit.CommonUI.Converters"
             themes:ToolkitThemes.UseToolkitTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:ConverterPipeline x:Key="VisibleIfEmpty">
                <converters:HasValueVisibilityConverter />
                <converters:InverseVisibilityConverter />
            </converters:ConverterPipeline>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="InputTextBox"
                 Background="Transparent"
                 themes:ToolkitThemes.UseToolkitTheme="True"
                 Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 AcceptsReturn="{Binding AcceptsReturn, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <TextBlock HorizontalAlignment="Left"
                   Padding="8 8 6 8"
                   VerticalAlignment="Top"
                   IsHitTestVisible="False"
                   Text="{Binding HintText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Visibility="{Binding Text, ElementName=InputTextBox, Converter={StaticResource VisibleIfEmpty}}"
                   Foreground="{DynamicResource {x:Static themes:ToolkitThemes.HintTextBrushKey}}" />
    </Grid>
</UserControl>
