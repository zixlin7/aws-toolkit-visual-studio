<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="awsPopupBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="{DynamicResource awsPopupBorderBrushKey}" />
        <Setter Property="BorderThickness" Value="4" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Margin" Value="0,0,8,8" />
        <Setter Property="Effect" Value="{DynamicResource awsDropShadowEffectKey}"/>
        <Setter Property="Background" Value="{DynamicResource awsPopupBackgroundBrushKey}"/>
    </Style>

    <Style x:Key="awsPopupDialogButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="70" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Margin" Value="5,0,0,0" />
    </Style>

</ResourceDictionary>