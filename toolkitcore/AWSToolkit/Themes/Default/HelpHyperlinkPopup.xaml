<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Amazon.AWSToolkit.CommonUI"
    xmlns:images="clr-namespace:Amazon.AWSToolkit.CommonUI.Images"
    xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes"   
    mc:Ignorable="d">

    <local:VsImages x:Key="VsImages" />

    <Style
        TargetType="local:HelpHyperlinkPopup">
        <Setter
            Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:HelpHyperlinkPopup">
                    <Grid Background="Transparent">
                        <images:VsImage 
                            x:Name="PART_HelpImage"
                            Width="16"
                            Height="16"
                            Margin="6 0 0 0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Source="{Binding Source={StaticResource VsImages}, Path=StatusHelpOutline}" />

                        <Popup 
                            x:Name="PART_ToolTipPopup"
                            PlacementTarget="{Binding ElementName=PART_HelpImage}"
                            Placement="Right">

                            <Border
                                BorderBrush="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBorderBrushKey}}"
                                BorderThickness="1"
                                Background="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBackgroundBrushKey}}">
                                <ContentPresenter
                                    Margin="12" 
                                    MaxWidth="275" />
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
