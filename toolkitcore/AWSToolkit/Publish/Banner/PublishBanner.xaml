<UserControl x:Class="Amazon.AWSToolkit.Publish.Banner.PublishBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes"
             themes:ToolkitThemes.UseToolkitTheme="True"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Border 
        Padding="6" 
        BorderThickness="1"
        BorderBrush="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBorderBrushKey}}" 
        Background="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBackgroundBrushKey}}"
        Visibility="{Binding ShowBanner, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    TextWrapping="Wrap"
                    Foreground="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipTextBrushKey}}">
                    <Run 
                        FontWeight="Bold" 
                        Text="Publish to AWS is now the recommended deployment experience." />
                </TextBlock>

                <TextBlock
                    TextWrapping="Wrap"
                    Foreground="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipTextBrushKey}}">
                    <Run 
                        Text="It supports a wider range of deployment capabilities." />
                    <Hyperlink Command="{Binding LearnMoreCommand}">Learn more about Publish to AWS.</Hyperlink>
                </TextBlock>

                <TextBlock
                    Margin="0 9 0 0"
                    TextWrapping="Wrap"
                    Foreground="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipTextBrushKey}}">
                    <Run 
                        Text="Support for this experience is ending in a future Toolkit release." />
                    <Hyperlink 
                        Command="{Binding SendFeedbackCommand}"
                        CommandParameter="Publish to AWS Migration"
                        >Not ready to switch? Tell us why.</Hyperlink>
                </TextBlock>
            </StackPanel>

            <StackPanel 
                Grid.Column="2"
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >
                <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center">
                    <Hyperlink Command="{Binding SwitchToNewExperienceCommand}">Launch Publish to AWS</Hyperlink>
                </TextBlock>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
