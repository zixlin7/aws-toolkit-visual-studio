<commonui:BaseAWSView x:Class="Amazon.AWSToolkit.SNS.View.ViewTopicControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"      
    Height="300" Width="300">

    <commonui:BaseAWSView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </commonui:BaseAWSView.Resources>

    <DockPanel>

        <ToolBar DockPanel.Dock="Top" ToolBarTray.IsLocked="True" >
            <Button Click="onPublishToTopicClick">
                <Button.Content>
                    <WrapPanel>
                        <Image Width="16" Height="16" Source="..\Resources\Images\publish_to_topic.png"/>
                        <TextBlock>Publish to Topic</TextBlock>
                    </WrapPanel>
                </Button.Content>
            </Button>
        </ToolBar>
        <Grid Name="_ctlGrid" Background="{DynamicResource awsPanelBackgroundBrushKey}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" Text="Topic ARN:" Style="{DynamicResource awsTextBlockBaseStyle}" />
            <TextBox Grid.Column="1" Grid.Row="0" Margin="5,5,5,5" Text="{Binding TopicARN}" Style="{DynamicResource awsSelectableTextBoxStyle}" />

            <TextBlock Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" Text="Topic Owner:" Style="{DynamicResource awsTextBlockBaseStyle}" />
            <TextBox Grid.Column="1" Grid.Row="1" Margin="5,5,5,5" Text="{Binding TopicOwner}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Margin="5,5,5,5" Style="{DynamicResource awsTextBlockBaseStyle}">
                <Hyperlink Click="onDisplayNameClick"><TextBlock ToolTip="This value will be used for the from name when notifications are sent out as email.">Email From Name:</TextBlock></Hyperlink>
            </TextBlock>
            <TextBox Grid.Column="1" Grid.Row="2" Margin="5,5,5,5" Text="{Binding DisplayName}" Style="{DynamicResource awsSelectableTextBoxStyle}" />
                    
        </Grid>
    </DockPanel>
</commonui:BaseAWSView>
