<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.ECS.View.Components.TasksTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Amazon.AWSToolkit.ECS.View.Components"
             xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>        
        <ToolBar Grid.Row="0" Grid.ColumnSpan="4" ToolBarTray.IsLocked="True" >
            <Button Click="onRefreshClick">
                <Button.Content>
                    <WrapPanel>
                        <Image Width="16" Height="16" DataContext="{DynamicResource CommonIcons}" Source="{Binding RefreshIcon}"/>
                    </WrapPanel>
                </Button.Content>
            </Button>

            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            
            <Label
                Grid.Row="5"
                Grid.Column="0"
                Margin="5,2,4,2"
                VerticalAlignment="Top"
                Style="{DynamicResource awsLabelBaseStyle}">
                Desired Task Status:
            </Label>

            <ComboBox
                Name="_ctlDesiredStatus"
                Margin="4,2,20,2"
                SelectedIndex="0"
                SelectionChanged="DesiredStatus_SelectionChanged"
                Style="{DynamicResource awsComboBoxStyle}">
                <ComboBox.Items>
                    <ComboBoxItem Name="Running">Running</ComboBoxItem>
                    <ComboBoxItem Name="Stopped">Stopped</ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>

            <Button Name="_ctlStop" Click="Stop_Click" Width="60" IsEnabled="False">Stop</Button>
            <Button Name="_ctlStopAll" Click="StopAll_Click" Width="60">Stop All</Button>
        </ToolBar>

        <commonui:ToolkitDataGridWrapper Grid.Row="1" ItemsSource="{Binding Tasks}" AutoGenerateColumns="False" CellStyle="{DynamicResource awsDataGridCellCentering}"
                         CanUserAddRows="False" CanUserDeleteRows="False" DockPanel.Dock="Top"
                         Name="_ctlTasks"
                         SelectionChanged="onTasksSelectionChanged"
                         HorizontalAlignment="Stretch" HeadersVisibility="Column">
            <commonui:ToolkitDataGridWrapper.Columns>

                <DataGridTextColumn Header="Task" Binding="{Binding TaskId, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Task Definition" Binding="{Binding TaskDefinition, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Last Status" Binding="{Binding NativeTask.LastStatus, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Desired Status" Binding="{Binding NativeTask.DesiredStatus, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Started By" Binding="{Binding NativeTask.StartedBy, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Started At" Binding="{Binding StartedAt, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Stopped At" Binding="{Binding StoppedAt, Mode=OneWay}" Width="auto"/>
                <DataGridTextColumn Header="Group" Binding="{Binding NativeTask.Group, Mode=OneWay}" Width="auto"/>

            </commonui:ToolkitDataGridWrapper.Columns>
        </commonui:ToolkitDataGridWrapper>
    </Grid>
</commonui:BaseAWSUserControl>
