<UserControl x:Class="Amazon.AWSToolkit.ECS.View.Components.TasksTabTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Amazon.AWSToolkit.ECS.View.Components"
             xmlns:converters="clr-namespace:Amazon.AWSToolkit.CommonUI.Converters;assembly=AWSToolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:HasItemsVisibilityConverter x:Key="HasItemsVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    
    <Grid Margin="2,1,2,1">

        <Rectangle RadiusX="3" RadiusY="3" 
                           Stroke="{DynamicResource awsDefaultControlBorderBrushKey}"  
                           Fill="{DynamicResource awsListBoxPanelItemBackgroundBrushKey}"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>


            <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" Text="Task ID:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="1" Grid.Row="0" Margin="0,5,0,5" Text="{Binding TaskId, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" Text="Task Definition:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="0,5,0,5" Text="{Binding TaskDefinition, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Margin="5,5,5,5" Text="Task Group:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="1" Grid.Row="2" Margin="0,5,0,5" Text="{Binding NativeTask.Group, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>


            <TextBlock Grid.Column="2" Grid.Row="0" Margin="20,5,5,5" Text="Launch Type:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="3" Grid.Row="0" Margin="0,5,0,5" Text="{Binding LaunchType, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="2" Grid.Row="1" Margin="20,5,5,5" Text="CPU:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="3" Grid.Row="1" Margin="0,5,0,5" Text="{Binding NativeTask.Cpu, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="2" Grid.Row="2" Margin="20,5,5,5" Text="Memory:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="3" Grid.Row="2" Margin="0,5,0,5" Text="{Binding NativeTask.Memory, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="4" Grid.Row="0" Margin="20,5,5,5" Text="Status:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="5" Grid.Row="0" Margin="0,5,0,5" Text="{Binding NativeTask.LastStatus, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="4" Grid.Row="1" Margin="20,5,5,5" Text="Started:"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="5" Grid.Row="1" Margin="0,5,0,5" Text="{Binding StartedAt, Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="4" Grid.Row="2" Margin="20,5,5,5" Text="Stopped:" Visibility="{Binding StoppedVisibility}"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="5" Grid.Row="2" Margin="0,5,0,5" Text="{Binding StoppedAt, Mode=OneWay}" Visibility="{Binding StoppedVisibility}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="NoWrap"/>

            <TextBlock Grid.Column="6" Grid.Row="0" Margin="20,5,5,5" Text="Stopped Reason:" Visibility="{Binding StoppedVisibility}"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="6" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,5,0,5" Text="{Binding CombinedStoppedReason, Mode=OneWay}" Visibility="{Binding StoppedVisibility}" Style="{DynamicResource awsSelectableTextBoxStyle}" 
                                                TextWrapping="Wrap"/>

            <TextBlock Grid.Column="6" Grid.Row="0" Margin="20,5,5,5" Text="Attachments:" Visibility="{Binding RunningVisibility}"  Style="{DynamicResource awsTextBlockBoldStyle}"/>
            <TextBox Grid.Column="6" Grid.Row="1" Grid.RowSpan="3" Margin="35,0,5,5" Text="{Binding FormattedAttachments, Mode=OneWay}" Visibility="{Binding RunningVisibility}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="5"
                TextWrapping="Wrap"
                Visibility="{Binding ContainerToLogsKeys, Converter={StaticResource HasItemsVisibilityConverter}}">
                <Hyperlink Command="{Binding ViewLogsCommand}" CommandParameter="{Binding ContainerToLogs}">
                    View Logs
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
