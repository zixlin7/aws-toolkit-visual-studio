<commonUi:BaseAWSUserControl x:Class="Amazon.AWSToolkit.ECS.WizardPages.PageUI.ECSClusterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Amazon.AWSToolkit.ECS.WizardPages.PageUI"
    mc:Ignorable="d" 
    xmlns:commonUi="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
              
    d:DesignHeight="400"
    d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,2,4,2"
                VerticalAlignment="Center"
                Style="{DynamicResource awsLabelBaseStyle}">
            _ECS Cluster:
        </Label>


        <ComboBox
                Name="_ctlClusterPicker"
                Grid.Row="0"
                Grid.Column="1"
                Margin="16,2,4,2"
                IsEditable="False"
                SelectedItem="{Binding Cluster, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectionChanged="_ctlClusterPicker_SelectionChanged"
                Style="{DynamicResource awsComboBoxStyle}" />

        <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="16,2,4,10"
                FontStyle="Italic"
                Style="{DynamicResource awsInfoTextStyle}"
                TextWrapping="Wrap">
                An Amazon ECS cluster is a logical grouping of container instances that you can place tasks on.
        </TextBlock>
        
        <Label
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,2,4,2"
                VerticalAlignment="Center"
                Style="{DynamicResource awsLabelBaseStyle}">
            Service:
        </Label>


        <ComboBox
                Name="_ctlServicePicker"
                Grid.Row="2"
                Grid.Column="1"
                Margin="16,2,4,2"
                IsEditable="True"
                SelectedItem="{Binding Service, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectionChanged="_ctlServicePicker_SelectionChanged"
                TextBoxBase.TextChanged="_ctlServicePicker_TextChanged"
                Style="{DynamicResource awsComboBoxStyle}" />

        <Label
                Grid.Row="2"
                Grid.Column="2"
                Margin="10,2,4,2"
                VerticalAlignment="Center"
                ToolTip="The number of instantiations of the specified task definition to place and keep running on your cluster."
                Style="{DynamicResource awsLabelBaseStyle}">
            Number of Instances:
        </Label>

        <TextBox
                Name="_ctlDesiredCount"
                Grid.Row="2"
                Grid.Column="3"
                Margin="16,2,4,2"
                Style="{DynamicResource awsTextBoxStyle}"
                ToolTip="The number of instantiations of the specified task definition to place and keep running on your cluster."
                Text="{Binding DesiredCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                />


    </Grid>
</commonUi:BaseAWSUserControl>
