<commonui:BaseAWSControl
    x:Class="Amazon.AWSToolkit.S3.View.AddEventConfigurationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="450"
    Height="230"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="15,5,5,5"
            VerticalAlignment="Center"
            Style="{DynamicResource awsTextBlockBaseStyle}">
            Event:
        </TextBlock>

        <ComboBox
            Name="_ctlEvents"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            SelectedIndex="0"
            Style="{DynamicResource awsComboBoxStyle}">
            <ComboBoxItem>s3:ObjectCreated:*</ComboBoxItem>
            <ComboBoxItem>s3:ObjectCreated:Put</ComboBoxItem>
            <ComboBoxItem>s3:ObjectCreated:Post</ComboBoxItem>
            <ComboBoxItem>s3:ObjectCreated:Copy</ComboBoxItem>
            <ComboBoxItem>s3:ObjectCreated:CompleteMultipartUpload</ComboBoxItem>
            <ComboBoxItem>s3:ObjectRemoved:*</ComboBoxItem>
            <ComboBoxItem>s3:ObjectRemoved:Delete</ComboBoxItem>
            <ComboBoxItem>s3:ObjectRemoved:DeleteMarkerCreated</ComboBoxItem>
            <ComboBoxItem>s3:ReducedRedundancyLostObject</ComboBoxItem>
        </ComboBox>

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="15,5,5,5"
            VerticalAlignment="Center"
            Style="{DynamicResource awsTextBlockBaseStyle}">
            Send To:
        </TextBlock>

        <ComboBox
            Name="_ctlSourceType"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            SelectedIndex="0"
            SelectionChanged="SendTo_SelectionChanged"
            Style="{DynamicResource awsComboBoxStyle}">
            <ComboBoxItem>Amazon SNS</ComboBoxItem>
            <ComboBoxItem>Amazon SQS</ComboBoxItem>
            <ComboBoxItem>AWS Lambda</ComboBoxItem>
        </ComboBox>

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="15,5,5,5"
            VerticalAlignment="Center"
            Style="{DynamicResource awsTextBlockBaseStyle}"
            ToolTip="Filter events for S3 object starting with this prefix">
            Prefix:
        </TextBlock>

        <TextBox
            Name="_ctlPrefix"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5,5,5,5"
            Style="{DynamicResource awsTextBoxStyle}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="15,5,5,5"
            VerticalAlignment="Center"
            Style="{DynamicResource awsTextBlockBaseStyle}"
            ToolTip="Filter events for S3 object starting with this suffix">
            Suffix:
        </TextBlock>

        <TextBox
            Name="_ctlSuffix"
            Grid.Row="3"
            Grid.Column="1"
            Margin="5,5,5,5"
            Style="{DynamicResource awsTextBoxStyle}" />


        <TextBlock
            Name="_ctlResourceLabel"
            Grid.Row="4"
            Grid.Column="0"
            Margin="15,5,5,5"
            VerticalAlignment="Center"
            Style="{DynamicResource awsTextBlockBaseStyle}">
            Resource:
        </TextBlock>

        <ComboBox
            Name="_ctlResources"
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            SelectedIndex="0"
            Style="{DynamicResource awsComboBoxStyle}" />

        <CheckBox
            Name="_ctlAlterPolicy"
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="15,5,5,5"
            IsChecked="True"
            Style="{DynamicResource awsCheckboxButtonBaseStyle}">
            <TextBlock Name="_ctlAlterPolicyMessage" />
        </CheckBox>

    </Grid>
</commonui:BaseAWSControl>
