<commonui:BaseAWSControl x:Class="Amazon.AWSToolkit.S3.View.InvokeLambdaFunctionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
             mc:Ignorable="d" 
             Height="230" Width="300">

    <commonui:BaseAWSControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </commonui:BaseAWSControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" Style="{DynamicResource awsTextBlockBaseStyle}">Region:</TextBlock>
        <ComboBox Name="_ctlRegion"  Grid.Column="1" Grid.Row="0" Margin="5,5,5,5" 
                 ItemsSource="{Binding Regions}"
                 DisplayMemberPath="DisplayName"
                 SelectedItem="{Binding SelectedRegion}"
                 SelectionChanged="_ctlRegion_SelectionChanged"
                 Style="{DynamicResource awsComboBoxStyle}"/>

        
        <TextBlock Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" Style="{DynamicResource awsTextBlockBaseStyle}">Function:</TextBlock>
        <ComboBox Name="_ctlFunctions"  Grid.Column="1" Grid.Row="1" Margin="5,5,5,5" 
                 ItemsSource="{Binding Functions}"
                 SelectedItem="{Binding SelectedFunction}"
                 Style="{DynamicResource awsComboBoxStyle}"/>

        <TextBlock Grid.Column="0" Grid.Row="2" Margin="5,5,5,5" Style="{DynamicResource awsTextBlockBaseStyle}">Event Type:</TextBlock>
        <ComboBox Name="_ctlEventType"  Grid.Column="2" Grid.Row="2" Margin="5,5,5,5" 
                 ItemsSource="{Binding EventTypes}"
                 SelectedItem="{Binding SelectedEventType}"
                 Style="{DynamicResource awsComboBoxStyle}"/>

        <CheckBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
                  IsChecked="{Binding GroupInvokes}"
                  Margin="5" Style="{DynamicResource awsCheckboxButtonBaseStyle}"  
                  Visibility="Collapsed"
                  >
            Group objects as a single invoke.
        </CheckBox>

        <CheckBox Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2"
                  IsChecked="{Binding GetLatestProperties}"
                  Margin="5" Style="{DynamicResource awsCheckboxButtonBaseStyle}"                  
                  >
            Get latest object(s) size and etag before invoking.
        </CheckBox>

        <TextBlock 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="5"   
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="12,4,4,0" 
                           Style="{DynamicResource awsFieldHintTextStyle}">
                If checked then a head request is made for each object to get the latest
                size and etag. Otherwise these fields will be omitted.                            
        </TextBlock>

        <TextBlock 
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="6"   
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="12,10,4,0" 
                           Style="{DynamicResource awsFieldHintTextStyle}">
                Status will be written to the AWS Output Window
        </TextBlock>

    </Grid>
</commonui:BaseAWSControl>
