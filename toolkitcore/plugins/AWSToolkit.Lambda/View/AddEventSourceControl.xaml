<commonui:BaseAWSControl
    x:Class="Amazon.AWSToolkit.Lambda.View.AddEventSourceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="150"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="15,5,5,5"
            VerticalAlignment="Center"
            Style="{DynamicResource awsTextBlockBaseStyle}">
            Source Type:
        </TextBlock>

        <ComboBox
            Name="_ctlSourceType"
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            SelectedIndex="0"
            SelectionChanged="EventSourceType_SelectionChanged"
            Style="{DynamicResource awsComboBoxStyle}">
            <ComboBoxItem>Amazon S3</ComboBoxItem>
            <ComboBoxItem>Amazon DynamoDB Stream</ComboBoxItem>
            <ComboBoxItem>Amazon SQS</ComboBoxItem>
            <ComboBoxItem>Amazon SNS</ComboBoxItem>
            <ComboBoxItem>Amazon Kinesis</ComboBoxItem>
            <ComboBoxItem>CloudWatch Events - Schedule</ComboBoxItem>
        </ComboBox>

        <TextBlock
            Name="_ctlResourceLabel"
            Grid.Row="1"
            Grid.Column="0"
            Margin="15,5,5,5"
            VerticalAlignment="Center"
            Style="{DynamicResource awsTextBlockBaseStyle}">
            Resource:
        </TextBlock>

        <ComboBox
            Name="_ctlResources"
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            SelectedIndex="0"
            Style="{DynamicResource awsComboBoxStyle}" />

        <Grid
            Name="_ctlPanelScheduledEventProperties"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="Enter a rule name to uniquely identify your scheduled event.">
                Rule Name:
            </TextBlock>

            <TextBox
                Name="_ctlScheduledEventRuleName"
                Grid.Row="0"
                Grid.Column="1"
                Margin="5,5,5,5"
                Style="{DynamicResource awsTextBoxStyle}" />


            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="Provide a description for your rule.">
                Description:
            </TextBlock>

            <TextBox
                Name="_ctlScheduledEventRuleDescription"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,5,5,5"
                Style="{DynamicResource awsTextBoxStyle}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="Provide a description for your rule.">
                Schedule Expression:
            </TextBlock>

            <ComboBox
                Name="_ctlScheduledEventRuleScheduleExpression"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                IsEditable="True"
                SelectedIndex="0"
                Style="{DynamicResource awsComboBoxStyle}">
                <ComboBoxItem>rate(1 minute)</ComboBoxItem>
                <ComboBoxItem>rate(5 minute)</ComboBoxItem>
                <ComboBoxItem>rate(15 minute)</ComboBoxItem>
                <ComboBoxItem>rate(1 hour)</ComboBoxItem>
                <ComboBoxItem>rate(1 day)</ComboBoxItem>
                <ComboBoxItem>cron(1 17 ? * MON-FRI *)</ComboBoxItem>
            </ComboBox>

        </Grid>

        <Grid
            Name="_ctlPanelS3Properties"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="Filter events for S3 object starting with this prefix">
                Prefix:
            </TextBlock>

            <TextBox
                Name="_ctlPrefix"
                Grid.Row="0"
                Grid.Column="1"
                Margin="5,5,5,5"
                Style="{DynamicResource awsTextBoxStyle}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="Filter events for S3 object ending with this suffix">
                Suffix:
            </TextBlock>

            <TextBox
                Name="_ctlSuffix"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,5,5,5"
                Style="{DynamicResource awsTextBoxStyle}" />

        </Grid>

        <Grid
            Name="_ctlPanelLambdaEventSource"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="The largest number of records that AWS Lambda will give to your function in a single event. The default is 100 records.">
                Batch Size:
            </TextBlock>

            <TextBox
                Name="_ctlBatchSize"
                Grid.Row="0"
                Grid.Column="1"
                Width="50"
                Margin="5,5,5,5"
                HorizontalAlignment="Left"
                Style="{DynamicResource awsTextBoxStyle}"
                Text="100"
                ToolTip="The largest number of records that AWS Lambda will give to your function in a single event. The default is 100 records." />


            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="The position in the stream where AWS Lambda should start reading.">
                Starting Position:
            </TextBlock>

            <ComboBox
                Name="_ctlStartingPosition"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,5,5,5"
                HorizontalAlignment="Left"
                SelectedIndex="0"
                Style="{DynamicResource awsComboBoxStyle}"
                ToolTip="The position in the stream where AWS Lambda should start reading.">
                <ComboBoxItem>TRIM_HORIZON</ComboBoxItem>
                <ComboBoxItem>LATEST</ComboBoxItem>
            </ComboBox>

        </Grid>

        <Grid
            Name="_ctlPanelSQSEventSource"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="15,5,5,5"
                VerticalAlignment="Center"
                Style="{DynamicResource awsTextBlockBaseStyle}"
                ToolTip="The largest number of records that will be read from your queue at once.">
                Batch Size:
            </TextBlock>

            <TextBox
                Name="_ctlSQSBatchSize"
                Grid.Row="0"
                Grid.Column="1"
                Width="50"
                Margin="5,5,5,5"
                HorizontalAlignment="Left"
                Style="{DynamicResource awsTextBoxStyle}"
                Text="10"
                ToolTip="The largest number of records that will be read from your queue at once." />



        </Grid>
    </Grid>
</commonui:BaseAWSControl>
