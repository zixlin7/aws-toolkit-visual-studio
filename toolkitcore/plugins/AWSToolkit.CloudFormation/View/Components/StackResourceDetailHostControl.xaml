<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.CloudFormation.View.Components.StackResourceDetailHostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
    Height="auto" Width="auto">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20,10,20,10">
        <Rectangle RadiusX="10" RadiusY="10" 
                   Stroke="{DynamicResource awsDefaultControlBorderBrushKey}"  
                   Fill="{DynamicResource awsListBoxPanelItemBackgroundBrushKey}"/>
        <Grid Name="_ctlMainPanel" Margin="10,10,10,10"/>
    </Grid>
</commonui:BaseAWSUserControl>
