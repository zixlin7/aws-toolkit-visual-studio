<commonui:BaseAWSControl x:Class="Amazon.AWSToolkit.CloudFormation.View.Components.StackConfigSavedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="80" Width="350">
    
    <commonui:BaseAWSControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="emulatedLinkStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="Cursor" Value="Hand" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="Red" />
                        <Setter Property="TextDecorations" Value="Underline" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="False">
                        <Setter Property="Foreground" Value="Blue" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            </ResourceDictionary>
    </commonui:BaseAWSControl.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock TextWrapping="Wrap" x:Name="_msg" VerticalAlignment="Stretch"  Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <CheckBox Grid.Row="1" Margin="4,8,4,4" 
                  IsChecked="{Binding OpenFileForEdit}"
                  Style="{DynamicResource awsCheckboxButtonBaseStyle}">
            _Open the configuration file
        </CheckBox>
    </Grid>
</commonui:BaseAWSControl>
