<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.CloudFormation.View.Components.ResourceDetails.RDSInstanceDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
    Height="auto" Width="auto">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/DefaultTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,5,5,0" Text="Name" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.DBName,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,5,5,0" Text="DB Instance Identifier" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.DBInstanceIdentifier,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5,5,0" Text="DB Instance Class" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.DBInstanceClass,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="5,5,5,0" Text="Port" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.Endpoint.Port,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="5,5,5,0" Text="Endpoint" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.Endpoint.Address,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>



        <TextBlock Grid.Row="0" Grid.Column="2" Margin="5,5,5,0" Text="DB Engine" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="0" Grid.Column="3" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.Engine,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="1" Grid.Column="2" Margin="5,5,5,0" Text="DB Engine Version" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="3" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.EngineVersion,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="2" Grid.Column="2" Margin="5,5,5,0" Text="DB Storage" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="3" Margin="5,5,5,0"  Text="{Binding FormattedAllocatedStorage,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="3" Grid.Column="2" Margin="5,5,5,0" Text="Availability Zone" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="3" Margin="5,5,5,0"  Text="{Binding NativeDBInstance.AvailabilityZone,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

    </Grid>
</commonui:BaseAWSUserControl>
