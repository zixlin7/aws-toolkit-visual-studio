<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.CloudFormation.View.Components.ResourceDetails.AutoScalingGroupDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
    Height="auto" Width="auto">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,5,5,0" Text="Name" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,5,5,0" Text="{Binding NativeAutoScalingGroup.AutoScalingGroupName,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,5,5,0" Text="Min Size" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeAutoScalingGroup.MinSize,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,5,5,0" Text="Max Size" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeAutoScalingGroup.MaxSize,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Margin="5,5,5,0" Text="Desired Capacity" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeAutoScalingGroup.DesiredCapacity,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Margin="5,5,5,0" Text="Health Check Type" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeAutoScalingGroup.HealthCheckType,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Margin="5,5,5,0" Text="Health Check Grace Period (Seconds)" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="5" Grid.Column="1" Margin="5,5,5,0" Text="{Binding NativeAutoScalingGroup.HealthCheckGracePeriod,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="1" Grid.Column="2" Margin="5,5,5,0" Text="Default Cooldown (Seconds)" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="3" Margin="5,5,5,0" Text="{Binding NativeAutoScalingGroup.DefaultCooldown,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>


        <TextBlock Grid.Row="2" Grid.Column="2" Margin="5,5,5,0" Text="Availability Zones" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="3" Margin="5,5,5,0" Text="{Binding FormattedAvailabilityZones,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="3" Grid.Column="2" Margin="5,5,5,0" Text="Intances" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="3" Margin="5,5,5,0" Text="{Binding FormattedInstances,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="4" Grid.Column="2" Margin="5,5,5,0" Text="Load Balancers" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="4" Grid.Column="3" Margin="5,5,5,0" Text="{Binding FormattedLoadBalancerNames,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

        <TextBlock Grid.Row="5" Grid.Column="2" Margin="5,5,5,0" Text="Metrics" Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Row="5" Grid.Column="3" Margin="5,5,5,0" Text="{Binding FormattedEnabledMetrics,Mode=OneWay}" Style="{DynamicResource awsSelectableTextBoxStyle}"/>

    </Grid>
</commonui:BaseAWSUserControl>
