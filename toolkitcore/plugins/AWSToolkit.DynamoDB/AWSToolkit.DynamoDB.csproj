  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AWSSDK.CloudWatch" Version="3.7.302.4" />
    <PackageReference Include="AWSSDK.DynamoDBv2" Version="3.7.301.14" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" Version="3.7.301.0" />
