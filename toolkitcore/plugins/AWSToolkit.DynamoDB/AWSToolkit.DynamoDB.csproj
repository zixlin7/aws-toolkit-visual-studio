<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyTitle>AWSToolkit.DynamoDB</AssemblyTitle>
    <RootNamespace>Amazon.AWSToolkit.DynamoDB</RootNamespace>
    <UseCommonOutputDirectory>true</UseCommonOutputDirectory>
  </PropertyGroup>
  <ItemGroup>
    <!-- TODO : remove legacy files -->
    <Page Remove="View\Components\DataFormatToolBar*" />
