<commonui:BaseAWSControl x:Class="Amazon.AWSToolkit.EC2.View.AssociateDHCPOptionSetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
             Height="400" Width="600"
             Loaded="onLoad">
    
    <commonui:BaseAWSControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </commonui:BaseAWSControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <RadioButton GroupName="Action" Grid.Row="0" Grid.Column="0" Name="_ctlActionExisting" 
                     Margin="5" IsChecked="{Binding IsExisting}"
                     Style="{DynamicResource awsRadioButtonBaseStyle}">Select Existing DHCP Options Set</RadioButton>
        <Grid Grid.Row="1" Grid.Column="0" Margin="20,5,5,5" IsEnabled="{Binding ElementName=_ctlActionExisting, Path=IsChecked}">
            <ComboBox Name="_ctlExistingDHCPOptions" ItemsSource="{Binding AvailableDHCPOptions}" 
                      SelectedItem="{Binding SelectedDHCPOptions}"
                      Style="{DynamicResource awsComboBoxStyle}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel HorizontalAlignment="Stretch">
                            <Button DockPanel.Dock="Left" Margin="0,1,5,1" Click="onDelete">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}, Path=IsSelected}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Image Width="10" Height="10" DataContext="{DynamicResource CommonIcons}" Source="{Binding RemoveIcon}"/>
                            </Button>
                            <TextBlock Text="{Binding FormattedLabel}" VerticalAlignment="Center" Style="{DynamicResource awsTextBlockBaseStyle}"/>
                        </DockPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <RadioButton GroupName="Action" Grid.Row="2" Grid.Column="0" Name="_ctlActionCreate" 
                     Margin="5" IsChecked="{Binding IsNew}"
                     Style="{DynamicResource awsRadioButtonBaseStyle}">Create new DHCP Options Set</RadioButton>
        <Grid Grid.Row="3" Grid.Column="0" Margin="20,5,5,5" IsEnabled="{Binding ElementName=_ctlActionCreate, Path=IsChecked}" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Margin="5" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Style="{DynamicResource awsTextBlockBaseStyle}">Domain Name</TextBlock>
            <StackPanel Orientation="Vertical" Margin="5" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding NewDHCPOptions.DomainName}" HorizontalAlignment="Stretch" Style="{DynamicResource awsTextBoxStyle}"/>
                <TextBlock TextWrapping="Wrap" Margin="10,3,10,3" Style="{DynamicResource awsFieldHintTextStyle}" FontStyle="Italic">
                    Enter the domain name that should be used for your hosts, for example, mybusiness.com.
                </TextBlock>
            </StackPanel>

            <TextBlock Margin="5" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Style="{DynamicResource awsTextBlockBaseStyle}">Domain Name Servers</TextBlock>
            <StackPanel Orientation="Vertical" Margin="5" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding NewDHCPOptions.DomainNameServices}" HorizontalAlignment="Stretch" Style="{DynamicResource awsTextBoxStyle}"/>
                <TextBlock TextWrapping="Wrap" Margin="10,3,10,3" Style="{DynamicResource awsFieldHintTextStyle}" FontStyle="Italic">
                    Enter up to 4 DNS server IP addresses, separated by commas, for example, 172.16.16.16, 10.10.10.10
                </TextBlock>
            </StackPanel>

            <TextBlock Margin="5" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Style="{DynamicResource awsTextBlockBaseStyle}">NTP Servers</TextBlock>
            <StackPanel Orientation="Vertical" Margin="5" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding NewDHCPOptions.NTPServers}" HorizontalAlignment="Stretch" Style="{DynamicResource awsTextBoxStyle}"/>
                <TextBlock TextWrapping="Wrap" Margin="10,3,10,3" Style="{DynamicResource awsFieldHintTextStyle}" FontStyle="Italic">
                    Enter up to 4 NTP server IP addresses, separated by commas.
                </TextBlock>
            </StackPanel>

            <TextBlock Margin="5" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Style="{DynamicResource awsTextBlockBaseStyle}">Netbios Name Servers</TextBlock>
            <StackPanel Orientation="Vertical" Margin="5" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding NewDHCPOptions.NetbiosNameServers}" HorizontalAlignment="Stretch" Style="{DynamicResource awsTextBoxStyle}"/>
                <TextBlock TextWrapping="Wrap" Margin="10,3,10,3" Style="{DynamicResource awsFieldHintTextStyle}" FontStyle="Italic">
                    Enter up to 4 NetBIOS server IP addresses, separated by commas.
                </TextBlock>
            </StackPanel>

            <TextBlock Margin="5" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" Style="{DynamicResource awsTextBlockBaseStyle}">Netbios Node Type</TextBlock>
            <StackPanel Orientation="Vertical" Margin="5" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding NewDHCPOptions.NetbiosNodeType}" HorizontalAlignment="Stretch" Style="{DynamicResource awsTextBoxStyle}"/>
                <TextBlock TextWrapping="Wrap" Margin="10,3,10,3" Style="{DynamicResource awsFieldHintTextStyle}" FontStyle="Italic">
                    Enter the NetBIOS node type, for example, 2.
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</commonui:BaseAWSControl>
