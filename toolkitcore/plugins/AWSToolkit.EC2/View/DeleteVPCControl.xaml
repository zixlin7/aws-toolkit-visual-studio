<commonui:BaseAWSControl x:Class="Amazon.AWSToolkit.EC2.View.DeleteVPCControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"  
             Height="300" Width="400">
    
    <commonui:BaseAWSControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </commonui:BaseAWSControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" TextWrapping="WrapWithOverflow" Margin="5" Style="{DynamicResource awsTextBlockBaseStyle}">
            Please confirm that you'd like to delete this VPC. Deleting this VPC will also delete objects associated with this VPC in this region:
        </TextBlock>
        
        <Grid Grid.Row="1" Grid.Column="0" Margin="30,5,30,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Style="{DynamicResource awsTextBlockBaseStyle}">Subnets</TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" Style="{DynamicResource awsTextBlockBaseStyle}">Network Interfaces</TextBlock>

            <TextBlock Grid.Row="1" Grid.Column="0" Style="{DynamicResource awsTextBlockBaseStyle}">Security Groups</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="1" Style="{DynamicResource awsTextBlockBaseStyle}">Route Tables</TextBlock>

            <TextBlock Grid.Row="2" Grid.Column="0" Style="{DynamicResource awsTextBlockBaseStyle}">Network ACLs</TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="1" Style="{DynamicResource awsTextBlockBaseStyle}">Internet Gateways</TextBlock>

        </Grid>

        <TextBlock Grid.Row="2" Margin="5,5,5,2" Style="{DynamicResource awsTextBlockBaseStyle}">Delete Log:</TextBlock>
        <TextBox Grid.Row="3" Grid.Column="0" IsReadOnly="True" TextWrapping="NoWrap" 
                 Margin="5,0,5,15" Name="_ctlOutputLog" VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto"
                 Style="{DynamicResource awsTextBoxStyle}"
                 VerticalAlignment="Stretch"/>
    </Grid>
</commonui:BaseAWSControl>
