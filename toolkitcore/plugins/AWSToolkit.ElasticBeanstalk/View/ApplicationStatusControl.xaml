<commonui:BaseAWSControl x:Class="Amazon.AWSToolkit.ElasticBeanstalk.View.ApplicationStatusControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
    xmlns:components="clr-namespace:Amazon.AWSToolkit.ElasticBeanstalk.View.Components"
    xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit" 
    Height="300" Width="800">

    <commonui:BaseAWSControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </commonui:BaseAWSControl.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" ToolBarTray.IsLocked="True" >
            <Button Click="onRefreshClick">
                <Button.Content>
                    <WrapPanel>
                        <Image Width="16" Height="16" DataContext="{DynamicResource CommonIcons}" Source="{Binding RefreshIcon}"/>
                        <TextBlock>Refresh</TextBlock>
                    </WrapPanel>
                </Button.Content>
            </Button>
        </ToolBar>

        <TextBlock Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" Text="Application:"  Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"  Margin="0,5,0,5" Text="{Binding ApplicationName}" Style="{DynamicResource awsSelectableTextBoxStyle}" />

        <TextBlock Grid.Column="0" Grid.Row="2" Margin="5,5,5,5" Text="Created:"  Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"  Margin="0,5,0,5" Text="{Binding DateCreated}" Style="{DynamicResource awsSelectableTextBoxStyle}" />

        <TextBlock Grid.Column="0" Grid.Row="3" Margin="5,5,5,5" Text="Updated:"  Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3"  Margin="0,5,0,5" Text="{Binding DateUpdated}" Style="{DynamicResource awsSelectableTextBoxStyle}" />

        <TextBlock Grid.Column="0" Grid.Row="4" Margin="5,5,5,5" Text="Description:"  Style="{DynamicResource awsTextBlockBaseStyle}"/>
        <TextBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3"  Margin="0,5,0,5" Text="{Binding Description}" Style="{DynamicResource awsSelectableTextBoxStyle}" />

        <TabControl Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Style="{DynamicResource awsPropertyPageVerticalTabStyle}" >
            <TabItem Header="Events">
                <components:ApplicationEvents x:Name="_ctlEvents"/>
            </TabItem>
            <TabItem Header="Versions">
                <components:ApplicationVersions x:Name="_ctlApplicationVersions"/>
            </TabItem>
        </TabControl>
    </Grid>
</commonui:BaseAWSControl>
