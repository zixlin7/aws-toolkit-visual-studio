<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyTitle>AWSToolkit.ElasticBeanstalk</AssemblyTitle>
    <RootNamespace>Amazon.AWSToolkit.ElasticBeanstalk</RootNamespace>
    <UseCommonOutputDirectory>true</UseCommonOutputDirectory>
  </PropertyGroup>
  <ItemGroup>
    <!-- TODO : remove legacy files. see https://github.com/aws/aws-toolkit-visual-studio-staging/pull/1088 -->
    <Compile Remove="DeploymentWizardProperties.cs" />
    <Compile Remove="WizardPages\PageControllers\ValidationPageController.cs" />
    <Page Remove="WizardPages\PageUI\ValidationPage.xaml" />
    <Compile Remove="WizardPages\PageUI\ValidationPage.xaml.cs" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.15" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="$(BuildRoot)\awsdeploy\client\AWSDeploymentLib\AWSDeploymentLib.csproj" />
    <ProjectReference Include="$(BuildRoot)\toolkitcore\AmazonCLIExtensions\AmazonCLIExtensions.csproj" />
    <ProjectReference Include="$(BuildRoot)\toolkitcore\AWSToolkit.Util\AWSToolkit.Util.csproj" />
    <ProjectReference Include="$(BuildRoot)\toolkitcore\AWSToolkit\AWSToolkit.csproj" />
    <ProjectReference Include="$(BuildRoot)\toolkitcore\plugins\AWSToolkit.EC2.Interface\AWSToolkit.EC2.Interface.csproj" />
    <ProjectReference Include="$(BuildRoot)\toolkitcore\plugins\AWSToolkit.ElasticBeanstalk.Interface\AWSToolkit.ElasticBeanstalk.Interface.csproj" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource 
      Include="Resources\EmbeddedImages\*.png" 
      Exclude="Resources\EmbeddedImages\Failed.png;Resources\EmbeddedImages\Validated.png" />
    <Resource Include="Resources\EmbeddedImages\Failed.png" />
    <Resource Include="Resources\EmbeddedImages\Validated.png" />
    <Resource Include="Resources\Images\*.png" />
  </ItemGroup>
</Project>
