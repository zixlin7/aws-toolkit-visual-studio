<UserControl x:Class="Amazon.AWSToolkit.Publish.Views.ExistingTargetDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Amazon.AWSToolkit.Publish.Views"
             xmlns:models="clr-namespace:Amazon.AWSToolkit.Publish.Models"
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes;assembly=AWSToolkit"
             xmlns:converters="clr-namespace:Amazon.AWSToolkit.Publish.Converters"
             xmlns:commonUi="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
             xmlns:commonConverters="clr-namespace:Amazon.AWSToolkit.CommonUI.Converters;assembly=AWSToolkit"
             themes:ToolkitThemes.UseToolkitTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <commonUi:VsImages x:Key="VsImages" />
            <commonConverters:InverseVisibilityConverter x:Key="InverseVisibilityConverter" />
            <converters:RepublishTargetsToVisibilityConverter x:Key="RepublishTargetsToVisibilityConverter" />
            <ToolTip x:Key="TargetToolTip"
                     Content="The Republish Target represents how and where your application will be deployed." />
            <DataTemplate x:Key="TargetTemplate" DataType="{x:Type models:RepublishTarget}">
                <Grid
                    Margin="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Column 2: Spacing between Icon and Text -->
                        <ColumnDefinition Width="12" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Image
                        Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                        Width="32"
                        Height="32"
                        Source="{Binding ServiceIcon}"/>

                    <!-- Show the Target name-->
                    <WrapPanel
                        Grid.Row="0" Grid.Column="2"
                        HorizontalAlignment="Left">
                        <TextBlock
                            FontWeight="Bold"
                            HorizontalAlignment="Left"
                            TextWrapping="Wrap"
                            Text="{Binding Name}" />

                        <TextBlock 
                            Margin="10 0 0 0"
                            Visibility="{Binding IsRecommended, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Text="(Recommended)"
                            />
                    </WrapPanel>

                    <TextBlock
                        Grid.Row="1" Grid.Column="2"
                        Margin="0 3 0 0"
                        HorizontalAlignment="Left"
                        TextWrapping="Wrap"
                        Text="{Binding RecipeName}" />

                    <TextBlock
                        Grid.Row="2" Grid.Column="2"
                        Margin="0 3 0 0"
                        HorizontalAlignment="Left"
                        Foreground="{DynamicResource {x:Static themes:ToolkitThemes.HintTextBrushKey}}"
                        Text="{Binding Service}" />
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Name="NoTargetsPanel" x:FieldModifier="private"
            Grid.Row="0" Grid.Column="0"
            VerticalAlignment="Center"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal" 
            >
            <Image
                VerticalAlignment="Center"
                Width="16" Height="16"
                Source="{Binding Source={StaticResource VsImages}, Path=StatusInformation}" 
                />

            <TextBlock
                Margin=" 6 0 0 0"
                FontWeight="SemiBold"
                Text="There are no existing targets for this application."
                />

            <StackPanel.Visibility>
                <MultiBinding Converter="{StaticResource RepublishTargetsToVisibilityConverter}">
                    <Binding Path="PublishTargetsLoaded"/>
                    <Binding Path="RepublishTargets"/>
                </MultiBinding>
            </StackPanel.Visibility>
        </StackPanel>

        <ListBox
            Grid.Column="0" Grid.Row="0"
            HorizontalContentAlignment="Stretch"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectionMode="Single"
            ItemTemplate="{StaticResource TargetTemplate}"
            ItemsSource="{Binding RepublishCollectionView}"
            SelectedItem="{Binding PublishDestination}">
            <ListBox.GroupStyle>
                <GroupStyle>
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander
                                            Padding="0"
                                            BorderThickness="0"
                                            Header="{Binding Name}"
                                            themes:ToolkitThemes.UseToolkitTheme="True"
                                            IsExpanded="True">
                                            <ItemsPresenter/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListBox.GroupStyle>
            <ListBox.Visibility>
                <Binding ElementName="NoTargetsPanel" Path="Visibility" Converter="{StaticResource InverseVisibilityConverter}"/>
            </ListBox.Visibility>

        </ListBox>
        <local:TargetProperties 
            Grid.Row="0" Grid.Column="2"
            Visibility="{Binding Visibility, ElementName=NoTargetsPanel, Converter={StaticResource InverseVisibilityConverter}}"
            />

    </Grid>
</UserControl>
