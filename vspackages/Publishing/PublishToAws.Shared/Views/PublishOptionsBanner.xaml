<UserControl x:Class="Amazon.AWSToolkit.Publish.Views.PublishOptionsBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes;assembly=AWSToolkit" 
             xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit" 
             xmlns:commands="clr-namespace:Amazon.AWSToolkit.Commands;assembly=AWSToolkit"
             mc:Ignorable="d"
             themes:ToolkitThemes.UseToolkitTheme="True"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"  >
                <Setter Property="Foreground" Value="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipTextBrushKey}}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Background="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBackgroundBrushKey}}"
            BorderThickness="1" Padding="1"
            BorderBrush="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBorderBrushKey}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <WrapPanel 
                Margin="6 6 6 6"
                Grid.Row="0" Grid.Column="0"
                Orientation="Vertical" 
                >
                <TextBlock
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    Text="Welcome to the new Publish to AWS experience!" />

                <TextBlock
                    Margin="0 3 0 0"
                    TextWrapping="Wrap">
                    <TextBlock TextWrapping="Wrap">We want your feedback - </TextBlock>
                    <TextBlock TextWrapping="Wrap">try it and let us know what you think </TextBlock>
                    <TextBlock TextWrapping="Wrap">by submitting issues and feature requests </TextBlock>
                    <commonui:BrowserHyperLink 
                        NavigateUri="https://github.com/aws/aws-toolkit-visual-studio/issues"
                        ToolTip="https://github.com/aws/aws-toolkit-visual-studio/issues">
                        <Run Text="on GitHub." />
                    </commonui:BrowserHyperLink>
                </TextBlock>
                <TextBlock
                    Margin="0 3 0 0"
                    TextWrapping="Wrap"
                    Foreground="{DynamicResource {x:Static themes:ToolkitThemes.HintTextBrushKey}}">
                    <TextBlock TextWrapping="Wrap">This feature is currently in Developer Preview </TextBlock>
                    <TextBlock TextWrapping="Wrap">and considered experimental. It is not recommended </TextBlock>
                    <TextBlock TextWrapping="Wrap">for production workloads. To learn more, visit our </TextBlock>
                    <Hyperlink 
                        Command="{Binding LearnMoreCommand}" 
                        ToolTip="{x:Static commands:LearnMoreCommandFactory.UserGuideUrl}">
                        <Run Text="User Guide." />
                    </Hyperlink>
                </TextBlock>
            </WrapPanel>

            <Button 
                Grid.Row="0" Grid.Column="1" 
                Margin="0 0 3 0" 
                Command="{Binding PersistOptionsSettingsCommand}"
                VerticalAlignment="Top"
                Content="&#x2715;">
            </Button>
        </Grid>
    </Border>
</UserControl>

