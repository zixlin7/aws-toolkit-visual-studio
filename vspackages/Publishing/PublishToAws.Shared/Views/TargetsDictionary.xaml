<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 
        This file defines content relating to target selection that is shared with more than one xaml.
    -->

    <ToolTip 
        x:Key="RecipeDescriptionToolTip"
        MaxWidth="500"
        >
        <StackPanel Orientation="Vertical">
            <TextBlock 
                FontWeight="Bold"
                TextWrapping="Wrap"
                Text="{Binding ShortDescription}" />
            <TextBlock 
                Margin="0 12 0 0"
                TextWrapping="Wrap"
                Text="{Binding Description}" />
        </StackPanel>
    </ToolTip>

</ResourceDictionary>
