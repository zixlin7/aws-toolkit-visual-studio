<UserControl x:Class="Amazon.AWSToolkit.Publish.Views.PublishApplicationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Amazon.AWSToolkit.Publish.Views"
             xmlns:commonUi="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
             xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes;assembly=AWSToolkit"
             xmlns:commonUiConverters="clr-namespace:Amazon.AWSToolkit.CommonUI.Converters;assembly=AWSToolkit"
             xmlns:images="clr-namespace:Amazon.AWSToolkit.CommonUI.Images;assembly=AWSToolkit"
             xmlns:viewModels="clr-namespace:Amazon.AWSToolkit.Publish.ViewModels"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:designData="clr-namespace:Amazon.AWSToolkit.Publish.Views.DesignData"
             themes:ToolkitThemes.UseToolkitTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=designData:DesignSamplePublishProjectViewModel, IsDesignTimeCreatable=True}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <commonUi:VsImages x:Key="VsImages" />
            <system:Int32 x:Key="Zero">0</system:Int32>
            <commonUiConverters:ConverterPipeline x:Key="VisibleIfNotMatching">
                <commonUiConverters:EqualityBooleanConverter />
                <commonUiConverters:InverseBooleanToVisibilityConverter />
            </commonUiConverters:ConverterPipeline>
            <commonUiConverters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <commonUiConverters:HasValueVisibilityConverter x:Key="HasValueVisibilityConverter" />

            <DataTemplate x:Key="MessageGroup" DataType="viewModels:DeploymentMessageGroup">
                <StackPanel Orientation="Vertical">
                    <Expander 
                        IsExpanded="{Binding IsExpanded}"
                        >
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}"></TextBlock>
                                <images:VsImage 
                                    Margin="6 0 0 0"
                                    Width="16"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding Description, Converter={StaticResource HasValueVisibilityConverter}}"
                                    Source="{Binding Source={StaticResource VsImages}, Path=StatusInformationOutline}">
                                    <images:VsImage.ToolTip>
                                        <ToolTip 
                                            DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource TemplatedParent}}"
                                            Style="{DynamicResource {x:Static themes:ToolkitThemeResourceKeys.ToolTipStyle}}"
                                            BorderBrush="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBorderBrushKey}}" BorderThickness="1"
                                            Background="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBackgroundBrushKey}}"
                                            Foreground="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipTextBrushKey}}"
                                            MaxWidth="500"
                                            Padding="3"
                                            >
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock 
                                                    FontWeight="Bold"
                                                    Text="{Binding Name}" />
                                                <TextBlock 
                                                    Margin="0 12 0 0"
                                                    Text="{Binding Description}" />
                                            </StackPanel>
                                        </ToolTip>
                                    </images:VsImage.ToolTip>
                                </images:VsImage>
                            </StackPanel>
                        </Expander.Header>
                        <Expander.Content>
                            <TextBox
                                BorderThickness="0"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Disabled"
                                IsReadOnly="True"
                                FontFamily="Consolas"
                                themes:ToolkitThemes.UseToolkitTheme="True"
                                FontSize ="{DynamicResource {x:Static themes:ToolkitThemes.Heading3FontSizeKey}}"
                                Text="{Binding Message, Mode=OneWay}"
                                TextChanged="OnTextChanged"
                                />
                        </Expander.Content>
                    </Expander>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="0 10 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Progress Indicator -->
        <ContentControl Grid.Row="0" Grid.Column="0" Content="{Binding}">
            <ContentControl.Resources>
                <DataTemplate x:Key="Loading">
                    <Control Style="{DynamicResource awsBusyAnimationStyle}" />
                </DataTemplate>
                <DataTemplate x:Key="Success">
                    <images:VsImage 
                        Width="32"
                        Height="32"
                        VerticalAlignment="Center"
                        Source="{Binding Source={StaticResource VsImages}, Path=StatusOK32}" />
                </DataTemplate>
                <DataTemplate x:Key="Fail">
                    <images:VsImage 
                        Width="32"
                        Height="32"
                        VerticalAlignment="Center"
                        Source="{Binding Source={StaticResource VsImages}, Path=StatusError32}" />
                </DataTemplate>
            </ContentControl.Resources>
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ProgressStatus}" Value="{x:Static viewModels:ProgressStatus.Loading}">
                            <Setter Property="ContentTemplate" Value="{StaticResource Loading}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ProgressStatus}" Value="{x:Static viewModels:ProgressStatus.Success}">
                            <Setter Property="ContentTemplate" Value="{StaticResource Success}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ProgressStatus}" Value="{x:Static viewModels:ProgressStatus.Fail}">
                            <Setter Property="ContentTemplate" Value="{StaticResource Fail}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <Grid
            Grid.Row="0" Grid.Column="1"
            Margin="12 0 0 0"
            VerticalAlignment="Center"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="9" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0" Grid.Column="0"
                FontSize="{DynamicResource {x:Static themes:ToolkitThemes.Heading3FontSizeKey}}"
                FontWeight="SemiBold"
                Text="{Binding StackName}" />
            <TextBlock
                Grid.Row="2" Grid.Column="0"
                FontSize="{DynamicResource {x:Static themes:ToolkitThemes.Heading3FontSizeKey}}"
                Text="{Binding RecipeName}" />

            <TextBlock
                Grid.Row="2" Grid.Column="2"
                FontSize="{DynamicResource {x:Static themes:ToolkitThemes.Heading3FontSizeKey}}"
                Text="{Binding RegionName}" />
        </Grid>

        <DockPanel 
            Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="3"
            Margin="0 12 0 0" LastChildFill="True">

            <!-- Footer, shown after publish completes -->
            <StackPanel
                DockPanel.Dock="Bottom"
                Margin="0 18 0 0"
                Orientation="Horizontal"
                Visibility="{Binding IsPublishing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                VerticalAlignment="top"
                HorizontalAlignment="Right">
                <Button
                    Content="Start Over"
                    d:DesignHeight="23" MinWidth="75"
                    Margin="6,0,0,0"
                    Command="{Binding StartOverCommand}" />
            </StackPanel>

            <local:PublishResources
                DockPanel.Dock="Right"
                MaxWidth="400"
                Margin="12 0 0 0"
                Visibility="{Binding PublishResources.Count, Converter={StaticResource VisibleIfNotMatching}, ConverterParameter={StaticResource Zero}}"/>

            <local:PublishFailureBanner
                DockPanel.Dock="Top"
                Visibility="{Binding IsFailureBannerEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Border 
                BorderThickness="1"
                BorderBrush="{DynamicResource {x:Static themes:ToolkitThemes.ToolTipBorderBrushKey}}">
                <ScrollViewer
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto"
                    >
                    <ItemsControl
                        ItemsSource="{Binding DeploymentMessages}"
                        ItemTemplate="{StaticResource MessageGroup}"
                        />
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
