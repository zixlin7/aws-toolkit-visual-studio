<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:Amazon.AWSToolkit.Publish.Models"
                    xmlns:commonUi="clr-namespace:Amazon.AWSToolkit.CommonUI;assembly=AWSToolkit"
                    xmlns:converters="clr-namespace:Amazon.AWSToolkit.CommonUI.Converters;assembly=AWSToolkit">

    <commonUi:VsImages x:Key="VsImages" />
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

    <DataTemplate x:Key="SystemCapabilityTemplate" DataType="{x:Type models:TargetSystemCapability}">
        <Grid 
            Margin="0 6 0 6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                >
                <!-- If a URL is available, show the TextBlock with a hyperlink, otherwise only show a TextBlock -->
                <!-- Elements within this TextBlock are deliberately placed back-to-back so that an additional
                    space is not rendered between each control -->
                <TextBlock
                    FontWeight="Bold"
                    Text="{Binding Name}"
                    Visibility="{Binding HasUrl, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                    /><commonUi:BrowserHyperLink 
                          FontWeight="Bold"
                          NavigateUri="{Binding InstallationUrl}"
                          ToolTip="{Binding InstallationUrl}"
                          >
                            <Run Text="{Binding Name, Mode=OneWay}" />
                    </commonUi:BrowserHyperLink><Run Text=" - " /><Run Text="{Binding Message, Mode=OneWay}" />
            </TextBlock>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>
