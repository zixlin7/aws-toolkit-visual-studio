<vstk:ThemedDialogWindow
    x:Class="Amazon.AwsToolkit.CodeWhisperer.Credentials.CredentialSelectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Amazon.AwsToolkit.CodeWhisperer.Credentials"
    xmlns:shell15="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
    xmlns:themes="clr-namespace:Amazon.AWSToolkit.Themes;assembly=AWSToolkit"
    xmlns:vstk="http://schemas.amazon.com/visualstudiotoolkit/2023"
    ResizeMode="NoResize"
    themes:ToolkitThemes.UseToolkitTheme="True"
    vstk:WindowBehavior.BindDialogResult="{Binding DialogResult}"
    Height="250"
    Width="400"
    mc:Ignorable="d">
    <DockPanel
        LastChildFill="True">
        <TextBlock
            DockPanel.Dock="Top"
            FontFamily="{DynamicResource {x:Static shell15:VsFonts.EnvironmentFontFamilyKey}}"
            FontSize="{DynamicResource {x:Static themes:ToolkitThemes.Heading1FontSizeKey}}"
            FontWeight="{DynamicResource {x:Static themes:ToolkitThemes.Heading1FontWeightKey}}"
            Margin="0 0 0 24"
            RenderOptions.ClearTypeHint="Enabled"
            Text="Sign In to CodeWhisperer"
            VerticalAlignment="Center" />

        <StackPanel
            DockPanel.Dock="Bottom"
            HorizontalAlignment="Right"
            Margin="0 6 0 0"
            Orientation="Horizontal">
            <Button
                Command="{Binding SubmitDialogCommand}"
                IsDefault="True"
                Margin="6 0 0 0">
                Sign In
            </Button>
            <Button
                Command="{Binding CancelDialogCommand}"
                Margin="6 0 0 0">
                Cancel
            </Button>
        </StackPanel>

        <StackPanel
            VerticalAlignment="Top">
            <TextBlock
                Margin="0 0 0 5"
                Text="Choose a profile:" />

            <ComboBox
                ItemsSource="{Binding CredentialIdentifiers}"
                DisplayMemberPath="DisplayName"
                SelectedItem="{Binding SelectedCredentialIdentifier}"
                Margin="0 0 0 12" />

            <TextBlock
                Margin="0 0 0 18">
                <Hyperlink 
                    Command="{Binding CreateCredentialProfileCommand}">
                    Create a new profile
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </DockPanel>
</vstk:ThemedDialogWindow>
