<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, 
    log4net" />
  </configSections>

  <log4net>

    <appender name="VsToolkitRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString">
        <converter>
          <name value="folder" />
          <type value="Amazon.AWSToolkit.Util.SpecialFolderPatternConverter,AWSToolkit.Util" />
        </converter>
        <conversionPattern value="%folder{LocalApplicationData}\\AWSToolkit\\logs\\visualstudio\\%env{VisualStudioVersion}\\log_%date{yyyy-MM-dd_HH-mm-ss}_%processid.txt" />
      </file>
      <appendToFile value="false" />
      <rollingStyle value="Size" />
      <staticLogFileName value="false" />
      <maxSizeRollBackups value="%property{MaxFileBackups}"/>
      <maximumFileSize type="log4net.Util.PatternString" >
		  <conversionPattern value="%property{MaxLogFileSize}MB"/>
		  </maximumFileSize>
      <preserveLogFileNameExtension value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="VsToolkitRollingFileAppender" />
    </root>
  </log4net>
</configuration>
