<commonui:BaseAWSUserControl x:Class="Amazon.AWSToolkit.Primitives.TwoListMover"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:commonui="clr-namespace:Amazon.AWSToolkit.CommonUI"                      
    DataContext="{Binding RelativeSource={RelativeSource Self}}"   
    x:Name="Main"
    Height="auto" Width="auto"
    Background="{DynamicResource awsPanelBackgroundBrushKey}">

    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/AWSToolkit;component/Themes/DefaultTheme.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Grid.Row="0" >
            <TextBlock Name="_ctlAvailableLabel" Margin="5,5,5,5" DockPanel.Dock="Top" Text="{Binding AvailableItemsLabel}"
                       Style="{DynamicResource awsTextBlockBaseStyle}"/>
            <ListBox Name="_ctlAvailableList" SelectionMode="Multiple" Style="{DynamicResource awsListBoxStyle}">
                <ListBox.ItemsSource>
                    <Binding ElementName="Main" Path="SortedAvailable"/>
                </ListBox.ItemsSource>
            </ListBox>
        </DockPanel>

        <StackPanel Margin="5,0,5,0" Grid.Column="1" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center">
            <Button Margin="0,5,0,5" Content=">>" Click="onMoveAllAvaliable"/>
            <Button Margin="0,5,0,5" Content=">" Click="onMoveSelectedAvaliable"/>
            <Button Margin="0,5,0,5" Content="&lt;" Click="onMoveSelectedAssigned"/>
            <Button Margin="0,5,0,5" Content="&lt;&lt;" Click="onMoveAllAssigned"/>
        </StackPanel>

        <DockPanel Grid.Column="2" Grid.Row="0" >
            <TextBlock Name="_ctlAssignedLabel" Margin="5,5,5,5" DockPanel.Dock="Top" Text="{Binding AssignedItemsLabel}"
                       Style="{DynamicResource awsTextBlockBaseStyle}"/>
            <ListBox Name="_ctlAssignedList"  SelectionMode="Multiple" Style="{DynamicResource awsListBoxStyle}">
                <ListBox.ItemsSource>
                    <Binding ElementName="Main" Path="SortedAssigned"/>
                </ListBox.ItemsSource>
            </ListBox>
        </DockPanel>
        
    </Grid>
</commonui:BaseAWSUserControl>
