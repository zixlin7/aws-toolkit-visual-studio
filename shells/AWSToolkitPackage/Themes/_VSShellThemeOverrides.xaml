<!-- AWS Toolkit theme defaults for all Visual Studio shells -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vsfx="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.10.0"
                    >

    <!-- 
    ******************************************************************************** 
    * Windows and dialogs
    ******************************************************************************** 
    -->
    <SolidColorBrush x:Key="awsToolWindowBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowBackgroundKey}}" />
    <SolidColorBrush x:Key="awsToolWindowTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTextKey}}" />

    <SolidColorBrush x:Key="awsDialogBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowBackgroundKey}}" />
    <SolidColorBrush x:Key="awsDialogTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}" />

    <SolidColorBrush x:Key="awsStatusPanelBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.BrandedUIFillKey}}" />

    <!-- using tool window background for views seems the most cross-theme compatible; VsColors.BackgroundKey is dark 
         grey in light/blue themes 
    -->
    <SolidColorBrush x:Key="awsWindowBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowBackgroundKey}}" />
    <SolidColorBrush x:Key="awsWindowTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}" />

    <SolidColorBrush x:Key="awsPanelHeaderAccentBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.PanelTitleBarKey}}"/>

    <SolidColorBrush x:Key="awsPanelBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.PanelBorderKey}}"/>

    <Color x:Key="awsPanelBackgroundGradientStop0ColorKey">#C0C0C0</Color>
    <Color x:Key="awsPanelBackgroundGradientStop1ColorKey">#F5F5F5</Color>

    <SolidColorBrush x:Key="awsPanelBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.PanelGradientLightKey}}"/>

    <SolidColorBrush x:Key="awsPanelForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>

    <!-- 
    ******************************************************************************** 
    * Buttons 
    ******************************************************************************** 
    -->
    
    <Color x:Key="awsButtonNormalBackgroundGradientStop0ColorKey">#F3F3F3</Color>
    <Color x:Key="awsButtonNormalBackgroundGradientStop1ColorKey">#EBEBEB</Color>
    <Color x:Key="awsButtonNormalBackgroundGradientStop2ColorKey">#DDDDDD</Color>
    <Color x:Key="awsButtonNormalBackgroundGradientStop3ColorKey">#CDCDCD</Color>
    <Color x:Key="awsButtonOverBackgroundGradientStop0ColorKey">#FFFAFAFA</Color>
    <Color x:Key="awsButtonOverBackgroundGradientStop1ColorKey">#FFE0E0E3</Color>
    <Color x:Key="awsButtonPressedBackgroundGradientStop0ColorKey">#FFE0E0E2</Color>
    <Color x:Key="awsButtonPressedBackgroundGradientStop1ColorKey">#FFF8F8F8</Color>

    <SolidColorBrush x:Key="awsButtonNormalBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ControlOutlineKey}}"/>
    <SolidColorBrush x:Key="awsButtonNormalBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ButtonFaceKey}}"/>
    <SolidColorBrush x:Key="awsButtonTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ButtonTextKey}}"/>
    <SolidColorBrush x:Key="awsButtonIsDefaultBorderBrush" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}"/>
    <SolidColorBrush x:Key="awsButtonPressedBorderBrush" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}"/>
    <SolidColorBrush x:Key="awsButtonMouseOverBorderBrush" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}"/>

    <!-- this allows us to retain black-on-white coloring for the checkbox button mark 
         across light and dark themes (if we used reversed foreground/background assignments,
         we'd have white-on-black checkbox marks
    -->
    <SolidColorBrush x:Key="awsCheckboxOrRadioBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ControlOutlineKey}}"/>
    <SolidColorBrush x:Key="awsCheckboxOrRadioForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>
    <SolidColorBrush x:Key="awsCheckboxOrRadioBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowKey}}"/>

    <!-- 
    ******************************************************************************** 
    * List/Grid controls
    ******************************************************************************** 
    -->
    
    <SolidColorBrush x:Key="awsGridBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowFrameKey}}"/>

    <SolidColorBrush x:Key="awsGridSplitterTextForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.GridHeadingTextKey}}"/>
    <SolidColorBrush x:Key="awsGridSplitterBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.GridHeadingBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsGridHeadingBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.GridHeadingBackgroundKey}}"/>
    <SolidColorBrush x:Key="awsGridHeadingForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.GridHeadingTextKey}}" />

    <!-- VsColors.WindowKey is too dark in light/blue themes -->
    <SolidColorBrush x:Key="awsGridBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowBackgroundKey}}"/>
    <SolidColorBrush x:Key="awsGridLineBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.GridLineKey}}" />
    <SolidColorBrush x:Key="awsGridForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>

    <SolidColorBrush x:Key="awsGridAttributeChangedForegroundBrushKey" Color="Red"/>

    <SolidColorBrush x:Key="awsGridSelectedRowBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}"/>
    <SolidColorBrush x:Key="awsGridSelectedCellForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightTextKey}}"/>

    <SolidColorBrush x:Key="awsGridSelectedNotFocussedRowBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsGridSplitterBackgroundGradientBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.PanelSeparatorKey}}"/>

    <!-- 
    ******************************************************************************** 
    * Popups 
    ******************************************************************************** 
    -->
    <SolidColorBrush x:Key="awsPopupBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.DropDownPopupBorderKey}}" />

    <SolidColorBrush x:Key="awsDropShadowBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.DropShadowBackgroundKey}}" />
    <DropShadowEffect x:Key="awsDropShadowEffectKey" Color="{DynamicResource {x:Static vsfx:VsColors.DropShadowBackgroundKey}}" Opacity=".5"/>

    <LinearGradientBrush x:Key="awsPopupBackgroundBrushKey" StartPoint="0.5, 0" EndPoint="0.5, 1">
        <GradientStop Offset="0" Color="{DynamicResource {x:Static vsfx:VsColors.DropDownPopupBackgroundBeginKey}}"/>
        <GradientStop Offset="1" Color="{DynamicResource {x:Static vsfx:VsColors.DropDownPopupBackgroundEndKey}}"/>
    </LinearGradientBrush>

    <!-- 
    ******************************************************************************** 
    * Tab controls 
    ******************************************************************************** 
    -->
    <SolidColorBrush x:Key="awsTabStripBackgroundBrushKey" Color="Transparent"/>

    <SolidColorBrush x:Key="awsTabContentBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabBorderKey}}"/>
    <SolidColorBrush x:Key="awsTabContentBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabBorderKey}}"/>
    
    <SolidColorBrush x:Key="awsSelectedTabItemBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabSelectedTabKey}}"/>
    <SolidColorBrush x:Key="awsSelectedTabItemBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabSelectedTextKey}}"/>
    <SolidColorBrush x:Key="awsSelectedTabItemBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabSelectedTabKey}}"/>

    <SolidColorBrush x:Key="awsHotTabItemBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabMouseOverBorderKey}}"/>
    <SolidColorBrush x:Key="awsHotTabItemBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabMouseOverTextKey}}"/>
    <LinearGradientBrush x:Key="awsHotTabItemBackgroundBrushKey" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabMouseOverBackgroundBeginKey}}" Offset="0"/>
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabMouseOverBackgroundEndKey}}" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="awsDisabledTabItemBackgroundBrushKey" Color="#F4F4F4"/>
    <SolidColorBrush x:Key="awsDisabledTabItemBorderBrushKey" Color="#FFC9C7BA"/>

    <SolidColorBrush x:Key="awsTabControlForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabTextKey}}"/>
    <SolidColorBrush x:Key="awsTabControlDisabledForegroundBrushKey" Color="{DynamicResource {x:Static SystemColors.GrayTextColorKey}}"/>

    <LinearGradientBrush x:Key="awsTabControlUnselectedBackgroundBrushKey" StartPoint="0,0" EndPoint="1,0">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabGradientBeginKey}}" Offset="0" />
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowTabGradientEndKey}}" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <!-- 
    ******************************************************************************** 
    * Menus
    ******************************************************************************** 
    -->
    <LinearGradientBrush x:Key="awsMenuBackgroundBrushKey">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMenuBackgroundGradientBeginKey}}" Offset="0" />
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMenuBackgroundGradientEndKey}}" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="awsMenuIconBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMenuIconBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsMenuForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.MenuTextKey}}"/>
    <SolidColorBrush x:Key="awsMenuBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMenuBorderKey}}"/>

    <SolidColorBrush x:Key="awsMenuSeparatorBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMenuSeparatorKey}}"/>

    <SolidColorBrush x:Key="awsMenuDisabledForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarTextInactiveKey}}"/>

    <SolidColorBrush x:Key="awsMenuSelectedBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ButtonHighlightKey}}"/>

    <SolidColorBrush x:Key="awsMenuHighlightedBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarHoverKey}}"/>
    <SolidColorBrush x:Key="awsMenuHighlightedBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarHoverKey}}"/>
    <SolidColorBrush x:Key="awsMenuSubmenuArrowGlyphHighlightedBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.MenuTextKey}}"/>

    <!-- 
    ******************************************************************************** 
    * Scrollbars
    ******************************************************************************** 
    -->

    <SolidColorBrush x:Key="awsScrollBarBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarKey}}"/>

    <SolidColorBrush x:Key="awsScrollBarHorizontalBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarBackgroundKey}}"/>
    <SolidColorBrush x:Key="awsScrollBarVerticalBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarBackgroundKey}}"/>
    
    <SolidColorBrush x:Key="awsScrollBarDisabledBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarDisabledBackgroundKey}}"/>

    <!-- VS does not have a color key for scroll bar arrows, relying on fixed colors. For blue/light theme, this is #FF868999 (255, 134, 137, 153).
         For dark theme, it uses #FF999999 (255, 153, 153, 153). As we don't (yet) detect theme change events so we could flip the color I've chosen
         to average the tones to one we can use in all themes (255, 143, 145, 153). This looks better than adopting the white of the combobox glyph.
    -->
    <SolidColorBrush x:Key="awsScrollBarArrowBrushKey" Color="#FF8F9199"/>
    <SolidColorBrush x:Key="awsScrollBarArrowBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarArrowBackgroundKey}}"/>
    <SolidColorBrush x:Key="awsScrollBarArrowDisabledBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarArrowDisabledBackgroundKey}}"/>
    
    <SolidColorBrush x:Key="awsScrollBarArrowMouseOverBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarArrowMouseOverBackgroundKey}}"/>
    <SolidColorBrush x:Key="awsScrollBarArrowMouseOverBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}"/>

    <SolidColorBrush x:Key="awsScrollBarArrowPressedBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarArrowPressedBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsScrollBarThumbBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarThumbBackgroundKey}}"/>
    <SolidColorBrush x:Key="awsScrollBarThumbBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarThumbBorderKey}}"/>
    <SolidColorBrush x:Key="awsScrollBarThumbGlyphBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarThumbGlyphKey}}"/>

    <SolidColorBrush x:Key="awsScrollBarThumbMouseOverBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarThumbMouseOverBackgroundKey}}"/>
    <SolidColorBrush x:Key="awsScrollBarThumbPressedBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ScrollBarThumbPressedBackgroundKey}}"/>

    <!-- 
    ******************************************************************************** 
    * Toolbars
    ******************************************************************************** 
    -->
    <SolidColorBrush x:Key="awsToolBarTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarTextActiveKey}}" />
    <SolidColorBrush x:Key="awsToolBarDisabledTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarTextInactiveKey}}"/>

    <SolidColorBrush x:Key="awsToolBarButtonHoverBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarHoverKey}}"/>
    <LinearGradientBrush x:Key="awsToolBarSubMenuBackgroundBrushKey">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMenuBackgroundGradientBeginKey}}" Offset="0" />
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMenuBackgroundGradientEndKey}}" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="awsToolBarButtonHoverBorderBrushKey">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMouseOverBackgroundBeginKey}}" Offset="0" />
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarMouseOverBackgroundEndKey}}" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="awsToolBarButtonCheckedBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowButtonDownKey}}"/>
    <SolidColorBrush x:Key="awsToolBarButtonPressedBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowButtonDownBorderKey}}"/>
    <SolidColorBrush x:Key="awsToolBarButtonPressedBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowButtonDownKey}}"/>

    <LinearGradientBrush x:Key="awsHorizontalToolBarBackgroundBrushKey"  EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarGradientBeginKey}}" Offset="0" />
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarGradientMiddleKey}}" Offset="0.5" />
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarGradientEndKey}}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="awsVerticalToolBarBackgroundBrushKey" EndPoint="1,0" StartPoint="0,0">
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarGradientBeginKey}}" Offset="0"/>
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarGradientMiddleKey}}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarGradientEndKey}}" Offset="1"/>
    </LinearGradientBrush>

    <!-- 
    ******************************************************************************** 
    * List Boxes
    ******************************************************************************** 
    -->

    <!-- These are used in custom list boxes where the items are a panel of controls, eg quicklaunch, storage. 
         Dark theme has some overrides to reduce the color.
    -->
    <SolidColorBrush x:Key="awsListBoxPanelItemBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.BrandedUIFillKey}}" />
    <SolidColorBrush x:Key="awsListBoxPanelItemHoverBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}" />
    <SolidColorBrush x:Key="awsListBoxPanelItemSelectedBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}" />
    <SolidColorBrush x:Key="awsListBoxPanelItemSelectedBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}" />

    <!-- 
    ******************************************************************************** 
    * Wizards 
    ******************************************************************************** 
    -->

    <SolidColorBrush x:Key="awsWizardBackplaneBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WizardOrientationPanelBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsWizardPageGroupPanelBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WizardOrientationPanelBackgroundKey}}"/>
    
    <SolidColorBrush x:Key="awsWizardPageGroupForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WizardOrientationPanelTextKey}}"/>
    <SolidColorBrush x:Key="awsWizardPageGroupForegroundSelectedBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}"/>

    <SolidColorBrush x:Key="awsWizardPagesPanelBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WizardOrientationPanelBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsWizardFooterContainerBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WizardOrientationPanelBackgroundKey}}"/>

    <!-- A simple set of black headers works for VS2010 and VS2012/2013 in light or blue themes. For dark themes, simple white works
    <SolidColorBrush x:Key="awsWizardGroupHeaderForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.StartPageTextHeadingKey}}"/>
    <SolidColorBrush x:Key="awsWizardGroupSubHeaderForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.StartPageTextSubHeadingKey}}"/>
     -->

    <SolidColorBrush x:Key="awsWizardGroupHeaderForegroundBrushKey" Color="Black"/>
    <SolidColorBrush x:Key="awsWizardGroupSubHeaderForegroundBrushKey" Color="Black"/>

    <SolidColorBrush x:Key="awsWizardReviewPanelsBackgroundBrushKey" Color="White"/>
    <SolidColorBrush x:Key="awsWizardReviewPanelSectionHeaderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>
    <SolidColorBrush x:Key="awsWizardReviewPanelSectionTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>
    <SolidColorBrush x:Key="awsWizardReviewPanelSectionDividerBrushKey" Color="DarkGray"/>

    <!-- 
    ******************************************************************************** 
    * TextBoxes
    ******************************************************************************** 
    -->

    <SolidColorBrush x:Key="awsTextBoxBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ControlOutlineKey}}"/>
    <SolidColorBrush x:Key="awsTextBoxForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>
    <SolidColorBrush x:Key="awsTextBoxBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowKey}}"/>

    <!-- VS does not exhibit mouse-over behaviors for textboxes, so retain original border above -->
    <SolidColorBrush x:Key="awsTextBoxMouseOverBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ControlOutlineKey}}"/>
    <SolidColorBrush x:Key="awsTextBoxSelectedBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}"/>

    <!-- 
    ******************************************************************************** 
    * Misc 
    ******************************************************************************** 
    -->
    <SolidColorBrush x:Key="awsDefaultControlBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ControlOutlineKey}}"/>
    <SolidColorBrush x:Key="awsDefaultControlForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>
    <SolidColorBrush x:Key="awsDefaultControlBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowKey}}"/>

    <SolidColorBrush x:Key="awsDisabledControlForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.CommandBarTextInactiveKey}}"/>
    <SolidColorBrush x:Key="awsDisabledControlBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxDisabledBackgroundKey}}"/>
    
    <SolidColorBrush x:Key="awsSubHeaderLabelBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.StartPageTextSubHeadingKey}}"/>
    <!-- do not use InfoTextKey - it's almost black, even in dark theme -->
    <SolidColorBrush x:Key="awsInfoTextForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.BrandedUITextKey}}"/>

    <SolidColorBrush x:Key="awsFieldHintTextForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ControlEditHintTextKey}}"/>

    <SolidColorBrush x:Key="awsDividerRuleBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ThreeDFaceKey}}"/>

    <SolidColorBrush x:Key="awsAccentBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.AccentBorderKey}}"/>
    <SolidColorBrush x:Key="awsAccentDarkBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.AccentDarkKey}}"/>
    <SolidColorBrush x:Key="awsAccentMediumBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.AccentMediumKey}}"/>
    <SolidColorBrush x:Key="awsAccentLightBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.AccentLightKey}}"/>

    <SolidColorBrush x:Key="awsSelectableTextBoxBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}"/>

    <SolidColorBrush x:Key="awsUrlTextFieldForegroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ControlLinkTextKey}}" />

    <SolidColorBrush x:Key="awsHeaderedDropPanelPopupBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowButtonDownBorderKey}}" />
    <SolidColorBrush x:Key="awsHeaderedDropPanelHeaderBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowButtonDownKey}}" />
    <SolidColorBrush x:Key="awsHeaderedDropPanelHeaderTextBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}" />
    <SolidColorBrush x:Key="awsHeaderedDropPanelFooterBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ToolWindowButtonDownKey}}" />

    <SolidColorBrush x:Key="awsStatusTextInfoForeground" Color="Green" />
    <SolidColorBrush x:Key="awsStatusTextWarnForeground" Color="Orange" />
    <SolidColorBrush x:Key="awsStatusTextErrorForeground" Color="Red" />
    <SolidColorBrush x:Key="awsStatusTextOKForeground" Color="{DynamicResource {x:Static vsfx:VsColors.WindowTextKey}}" />

    <!--
    ******************************************************************************** 
    * ComboBox overrides - so we gain the 'flatter' style present in VS and not the
    * 'raised button' style used by default in WPF. Because the combobox control
    * template uses hard-wired colors, we also need to copy the template to make
    * use of these color remaps and can't just set them in style overrides.
    ******************************************************************************** 
    -->

    <!-- 
        readonly combobox color assignments 
    -->
    <SolidColorBrush x:Key="awsComboBoxBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBorderKey}}"/>
    <SolidColorBrush x:Key="awsComboBoxBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBackgroundKey}}"/>

    <LinearGradientBrush x:Key="awsComboBoxDropPanelBackgroundBrushKey">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxPopupBackgroundBeginKey}}" Offset="0" />
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxPopupBackgroundEndKey}}" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="awsComboBoxToggleButtonBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBorderKey}}"/>
    <SolidColorBrush x:Key="awsComboBoxToggleButtonBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsComboBoxToggleButtonSplitBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBorderKey}}"/>
    <SolidColorBrush x:Key="awsComboBoxToggleButtonSplitBorderBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBackgroundKey}}"/>

    <SolidColorBrush x:Key="awsComboBoxArrowBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxGlyphKey}}"/>

    <SolidColorBrush x:Key="awsComboBoxDisabledBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxDisabledBorderKey}}" />
    <SolidColorBrush x:Key="awsComboBoxDisabledBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxDisabledBackgroundKey}}" />

    <SolidColorBrush x:Key="awsComboBoxArrowDisabledBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxDisabledGlyphKey}}"/>

    <SolidColorBrush x:Key="awsComboBoxMouseOverBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBorderKey}}"/>

    <LinearGradientBrush x:Key="awsComboBoxMouseOverBackgroundBrushKey" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxMouseOverBackgroundBeginKey}}" Offset="0" />
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxMouseOverBackgroundEndKey}}" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="awsComboBoxArrowMouseOverBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxMouseOverGlyphKey}}"/>

    <SolidColorBrush x:Key="awsComboBoxMouseOverSplitBorderBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.HighlightKey}}" />
    <LinearGradientBrush x:Key="awsComboBoxMouseOverSplitBorderBackgroundBrushKey">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxPopupBackgroundBeginKey}}" Offset="0" />
            <GradientStop Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxPopupBackgroundEndKey}}" Offset="1" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <!-- note: VS 2013 only switches entire border for editable combo boxes -->
    <SolidColorBrush x:Key="awsComboBoxPressedBorderBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxBorderKey}}"/>
    <SolidColorBrush x:Key="awsComboBoxPressedBackgroundBrushKey" Color="{DynamicResource {x:Static vsfx:VsColors.ComboBoxMouseDownBackgroundKey}}"/>

