<iam-policy-templates>
  <templates>
    <template>
      <name>Power User Access</name>
      <description>Administrator access but does not allow management of Users and groups.</description>
      <body>
<![CDATA[ 
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "NotAction": "iam:*",
      "Resource": "*"
    }
  ]
}
]]>
    </body>
    </template>
    <template>
      <name>CloudWatch Full Access</name>
      <description>Provides full access to CloudWatch.</description>
      <body>
<![CDATA[ 
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "autoscaling:Describe*",
        "cloudwatch:*",
        "logs:*",
        "sns:*"
      ],
      "Effect": "Allow",
      "Resource": "*"
    }
  ]
}
]]>
      </body>
    </template>	
    <template>
      <name>Amazon DynamoDB Full Access</name>
      <description>Provides full access to Amazon DynamoDB.</description>
