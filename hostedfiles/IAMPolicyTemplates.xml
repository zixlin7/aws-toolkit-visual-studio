    </template>
    <template>
      <name>Amazon Kinesis Access for Lambda Function.</name>
      <description>Read access for Lambda functions.</description>
      <body>
        <![CDATA[ 
{
    "Version":"2012-10-17",
    "Statement":[
        {
            "Effect":"Allow",
            "Action":[
                "lambda:InvokeFunction",
                "kinesis:GetRecords",
                "kinesis:GetShardIterator",
                "kinesis:DescribeStream",
                "kinesis:ListStreams"
            ],
            "Resource":[
                "*"
            ]
        }
    ]
}
]]>
      </body>
    </template>
  </templates>
</iam-policy-templates>